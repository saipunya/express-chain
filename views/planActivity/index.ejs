<h1>Plan Activities</h1>
<a href="/planActivity/create">Create New</a>
<table>
  <tr>
    <th>ID</th><th>Number</th><th>Subject</th><th>Status</th><th>Project Code</th><th>Actions</th>
  </tr>
  <% activities.forEach(a => { %>
    <tr>
      <td><%= a.ac_id %></td>
      <td><%= a.ac_number %></td>
      <td><%= a.ac_subject %></td>
      <td>
        <% if (a.ac_status === 2) { %>
          ดำเนินการแล้ว
        <% } else if (a.ac_status === 1) { %>
          อยู่ระหว่างดำเนินการ
        <% } else { %>
          ยังไม่ดำเนินการ
        <% } %>
      </td>
      <td><%= a.ac_procode %></td>
      <td>
        <a href="/planActivity/<%= a.ac_id %>">View</a>
        <a href="/planActivity/<%= a.ac_id %>/edit">Edit</a>
        <form action="/planActivity/<%= a.ac_id %>/delete" method="post" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
