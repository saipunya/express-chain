<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js" crossorigin="anonymous"></script>

<script>
  const STATUS_MAP = {
    0: { label: 'ยังไม่ดำเนินการ', badge: 'secondary', icon: 'clock' },
    1: { label: 'อยู่ระหว่างดำเนินการ', badge: 'warning text-dark', icon: 'hourglass-split' },
    2: { label: 'ดำเนินการเรียบร้อย', badge: 'success', icon: 'check-circle' }
  };

  function toggleMonthDetails(index) {
    const detailsEl = document.getElementById(`month-details-${index}`);
    const iconEl = document.getElementById(`toggle-icon-${index}`);
    const textEl = document.getElementById(`toggle-text-${index}`);
    const isHidden = detailsEl.style.display === 'none';
    detailsEl.style.display = isHidden ? 'grid' : 'none';
    iconEl.className = isHidden ? 'bi bi-chevron-up me-1' : 'bi bi-chevron-down me-1';
    textEl.textContent = isHidden ? 'ซ่อนรายละเอียด' : 'ดูรายละเอียด';
  }

  async function showActivitiesModal(proCode, proName) {
    const modal = new bootstrap.Modal(document.getElementById('activitiesModal'));
    const loadingEl = document.getElementById('activitiesLoading');
    const contentEl = document.getElementById('activitiesContent');
    const errorEl = document.getElementById('activitiesError');

    document.getElementById('activitiesModalLabel').textContent = `กิจกรรม: ${proCode} - ${proName}`;
    setVisibility(loadingEl, true);
    setVisibility(contentEl, false);
    setVisibility(errorEl, false);
    modal.show();

    try {
      const res = await fetch(`/planactivity/api/by-project?pro_code=${encodeURIComponent(proCode)}`, {
        headers: { Accept: 'application/json' }
      });
      if (!res.ok) throw new Error(`HTTP ${res.status}`);

      const text = await res.text();
      let data;
      try {
        data = JSON.parse(text);
      } catch (parseErr) {
        throw new Error('Invalid JSON response');
      }

      const activities = Array.isArray(data) ? data : (data.activities || []);

      if (!activities.length) {
        errorEl.querySelector('span').textContent = 'ยังไม่มีกิจกรรมสำหรับโครงการนี้';
        setVisibility(loadingEl, false);
        setVisibility(errorEl, true);
        return;
      }

      const tbody = document.getElementById('activitiesTableBody');
      tbody.innerHTML = '';
      activities.forEach((activity, i) => {
        const statusKey = Number(activity.monthly_status ?? activity.ac_status ?? 0);
        const status = STATUS_MAP[statusKey] || STATUS_MAP[0];
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${i + 1}</td>
          <td>${activity.ac_subject || '-'}</td>
          <td class="text-center">
            <span class="badge bg-${status.badge}">
              <i class="bi bi-${status.icon} me-1"></i>${status.label}
            </span>
          </td>`;
        tbody.appendChild(tr);
      });

      setVisibility(loadingEl, false);
      setVisibility(contentEl, true);
    } catch (err) {
      console.error('Error loading activities:', err);
      errorEl.querySelector('span').textContent = 'ไม่สามารถโหลดข้อมูลกิจกรรมได้';
      setVisibility(loadingEl, false);
      setVisibility(errorEl, true);
    }
  }

  // Reports Modal Functions
  function setVisibility(el, show) {
    if (!el) return;
    el.classList.toggle('d-none', !show);
  }

  function showReportsModal(proCode, proName, monthlyStatusList) {
    const modal = new bootstrap.Modal(document.getElementById('reportsModal'));
    document.getElementById('reportsModalLabel').innerHTML = `<i class="bi bi-calendar3 me-2"></i>รายงานรายเดือน - ${proName}`;
    
    const reportsContent = document.getElementById('reportsContent');
    const reportsLoading = document.getElementById('reportsLoading');
    const reportsError = document.getElementById('reportsError');
    
    setVisibility(reportsContent, false);
    setVisibility(reportsLoading, true);
    setVisibility(reportsError, false);
    
    // Clear previous content
    reportsContent.innerHTML = '';
    
    // Show modal immediately
    modal.show();
    
    // Simulate loading delay for better UX
    setTimeout(() => {
      try {
        if (!monthlyStatusList || monthlyStatusList.length === 0) {
          reportsContent.innerHTML = `
            <div class="text-center py-4">
              <i class="bi bi-calendar-x fs-1 text-muted d-block mb-3"></i>
              <p class="text-muted">ยังไม่มีเดือนให้เลือกสำหรับโครงการนี้</p>
            </div>
          `;
        } else {
          const reportsGrid = document.createElement('div');
          reportsGrid.className = 'row g-3';
          
          monthlyStatusList.forEach((status) => {
            const reportCard = document.createElement('div');
            reportCard.className = 'col-md-6 col-lg-4';
            
            const badgeClass = status.operationsReported 
              ? 'bg-success-subtle text-success' 
              : 'bg-secondary-subtle text-dark';
            const badgeText = status.operationsReported ? '✓ รายงานแล้ว' : 'รอรายงาน';
            const reportUrl = `/planactivity/report?pro_code=${encodeURIComponent(proCode)}&month=${encodeURIComponent(status.iso)}`;
            
            reportCard.innerHTML = `
              <div class="card h-100 border-0 shadow-sm ${status.operationsReported ? 'border-success' : ''}" 
                   style="cursor: pointer; transition: var(--transition);"
                   onclick="window.location.href='${reportUrl}'"
                   onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='var(--shadow-lg)'"
                   onmouseout="this.style.transform=''; this.style.boxShadow='var(--shadow-sm)'">
                <div class="card-body p-3">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <h6 class="card-title mb-0 text-primary">${status.shortLabel || status.label}</h6>
                    <span class="badge ${badgeClass}">${badgeText}</span>
                  </div>
                  <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">${status.label || status.shortLabel}</small>
                    <i class="bi bi-arrow-right-circle text-primary"></i>
                  </div>
                </div>
              </div>
            `;
            
            reportsGrid.appendChild(reportCard);
          });
          
          reportsContent.appendChild(reportsGrid);
        }
        
        setVisibility(reportsLoading, false);
        setVisibility(reportsContent, true);
        
      } catch (err) {
        console.error('Error loading reports modal:', err);
        setVisibility(reportsLoading, false);
        setVisibility(reportsError, true);
      }
    }, 300); // Small delay for loading effect
  }

  function toggleKpiBlock(index) {
    const block = document.getElementById(`kpi-block-${index}`);
    const icon = document.getElementById(`kpi-icon-${index}`);
    const isOpen = icon.classList.contains('open');
    if (isOpen) {
      block.style.display = 'none';
      icon.classList.remove('open');
    } else {
      block.style.display = 'block';
      icon.classList.add('open');
    }
  }

  document.addEventListener('DOMContentLoaded', function () {
    // Initialize report modal buttons
    document.querySelectorAll('.reports-modal-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const proCode = this.dataset.proCode;
        const proName = this.dataset.proName;
        const monthlyStatusList = JSON.parse(this.dataset.monthlyStatus || '[]');
        showReportsModal(proCode, proName, monthlyStatusList);
      });
    });

    // Initialize charts
    if (typeof window.Chart === 'undefined') return;

    const __projectStats = <%- JSON.stringify(typeof projectStats !== 'undefined' ? projectStats : {}) %>;
    const __activityStats = <%- JSON.stringify(typeof activityStats !== 'undefined' ? activityStats : {}) %>;
    const pr = <%- JSON.stringify(Array.isArray(projectReports) ? projectReports : []) %>;

    const ps = {
      notStarted: Number((__projectStats.status || {}).notStarted || 0),
      inProgress: Number((__projectStats.status || {}).inProgress || 0),
      done: Number((__projectStats.status || {}).done || 0)
    };

    const colors = {
      primary: '#0d6efd', success: '#198754',
      warning: '#ffc107', danger: '#dc3545',
      secondary: '#6c757d', info: '#0dcaf0'
    };

    const elProj = document.getElementById('chartProjectStatus');
    if (elProj) {
      new Chart(elProj.getContext('2d'), {
        type: 'doughnut',
        data: {
          labels: ['ยังไม่ดำเนินการ', 'ระหว่างดำเนินการ', 'สำเร็จแล้ว'],
          datasets: [{
            data: [ps.notStarted, ps.inProgress, ps.done],
            backgroundColor: [colors.secondary, colors.warning, colors.success],
            borderWidth: 0, hoverOffset: 6
          }]
        },
        options: {
          plugins: { legend: { position: 'bottom', labels: { padding: 16, usePointStyle: true } } },
          responsive: true, maintainAspectRatio: false, cutout: '65%'
        }
      });
    }

    const elProg = document.getElementById('chartProjectProgress');
    if (elProg && pr.length) {
      const labels = pr.map(r => r.pro_name ? `${r.pro_code}` : r.pro_code);
      const percents = pr.map(r => {
        const p = Number(r.achievementPercent || 0);
        return isFinite(p) ? Math.max(0, Math.min(100, p)) : 0;
      });

      const valueLabelPlugin = {
        id: 'valueLabelPlugin',
        afterDatasetsDraw(chart) {
          const { ctx } = chart;
          ctx.save();
          ctx.fillStyle = '#1f2937';
          ctx.font = '12px sans-serif';
          ctx.textAlign = 'center';
          ctx.textBaseline = 'bottom';
          chart.getDatasetMeta(0).data.forEach((bar, index) => {
            const value = percents[index] ?? 0;
            const { x, y } = bar.tooltipPosition();
            ctx.fillText(`${Number(value).toFixed(2)}%`, x, y - 4);
          });
          ctx.restore();
        }
      };

      new Chart(elProg.getContext('2d'), {
        type: 'bar',
        data: {
          labels,
          datasets: [{
            label: 'ความก้าวหน้า (%)',
            data: percents,
            backgroundColor: percents.map(v => v >= 100 ? colors.success : v >= 70 ? colors.warning : colors.danger),
            borderWidth: 0, borderRadius: 6
          }]
        },
        options: {
          scales: {
            y: { beginAtZero: true, max: 100, ticks: { callback: v => v + '%' }, grid: { color: '#f1f3f5' } },
            x: { grid: { display: false } }
          },
          plugins: {
            legend: { display: false },
            tooltip: { callbacks: { label: ctx => ` ${ctx.parsed.y}%` } }
          },
          responsive: true, maintainAspectRatio: false
        },
        plugins: [valueLabelPlugin]
      });
    }
  });
</script>

