  <div class="card border-0 shadow-sm mb-4 hover-card">
    <div class="card-body p-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h5 mb-0 d-flex align-items-center">
          <span class="me-2 p-2 bg-info bg-opacity-10 rounded-circle">
            <i class="bi bi-bar-chart-line text-info fs-6"></i>
          </span>
          ผลการรายงานตามโครงการ
        </h2>
        <a href="/planactivity/report" class="btn btn-outline-info btn-sm rounded-pill px-3">
          <i class="bi bi-clipboard-data me-1"></i>จัดการรายงานรายเดือน
        </a>
      </div>

      <!-- Bar chart: ความก้าวหน้าตามโครงการ -->
      <div class="mb-4 p-3 bg-light rounded-3">
        <canvas id="chartProjectProgress" height="180"></canvas>
      </div>

      <div class="table-responsive mb-0">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th class="fw-medium text-muted">โครงการ</th>
              <th class="text-center fw-medium text-muted">กิจกรรมที่รายงาน</th>
              <th class="text-center fw-medium text-muted">ผลตัวชี้วัดสะสม / เป้าหมาย</th>
              <th class="fw-medium text-muted" style="width: 220px;">เดือนที่รายงานล่าสุด</th>
              <th class="fw-medium text-muted" style="width: 140px;">การจัดการ</th>
            </tr>
          </thead>
          <tbody>
            <% if (projectReports.length) { %>
              <% projectReports.forEach((report) => { const totalActivities = Number(report.total_activities || 0); const reportedActivities = Number(report.reported_activities || 0); const totalPlan = Number(report.total_plan || 0); const cumulativeActual = Number(report.cumulative_actual || 0); const percent = report.achievementPercent; %>
                <tr class="hover-row">
                  <td>
                    <div class="fw-semibold mb-1"><%= report.pro_code %> - <%= report.pro_name || '-' %></div>
                    <div class="d-flex gap-2">
                      <span class="badge bg-light text-dark px-2 py-1">
                        <i class="bi bi-list-task me-1"></i><%= totalActivities %>
                      </span>
                      <span class="badge bg-light text-dark px-2 py-1">
                        <i class="bi bi-graph-up me-1"></i><%= report.total_kpis || 0 %>
                      </span>
                    </div>
                  </td>
                  <td class="text-center">
                    <div class="fw-semibold mb-1"><%= reportedActivities %> / <%= totalActivities %></div>
                    <div class="progress" style="height: 6px;">
                      <% const activityPercent = totalActivities > 0 ? (reportedActivities / totalActivities * 100) : 0; %>
                      <div class="progress-bar bg-info" style="width: <%= Math.round(activityPercent) %>%;"></div>
                    </div>
                    <small class="text-muted">มีบันทึกรายเดือนแล้ว</small>
                  </td>
                  <td class="text-center">
                    <% if (totalPlan > 0) { %>
                      <div class="fw-semibold text-primary mb-1">
                        <%= cumulativeActual.toLocaleString('th-TH', { maximumFractionDigits: 2 }) %> / <%= totalPlan.toLocaleString('th-TH', { maximumFractionDigits: 0 }) %>
