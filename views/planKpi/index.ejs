<%- include('../partials/header') %>

<div class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="h3 mb-1"><i class="bi bi-graph-up me-2"></i>ตัวชี้วัดโครงการ</h1>
        <% if (pro_code) { %>
          <p class="text-muted small mb-0">โครงการ: <span class="badge bg-info text-dark"><%= pro_code %></span></p>
        <% } else { %>
          <p class="text-muted small mb-0">จัดการตัวชี้วัดของโครงการ</p>
        <% } %>
      </div>
      <a href="/plankpi/create<%= pro_code ? ('?pro_code=' + encodeURIComponent(pro_code)) : '' %>" class="btn btn-success btn-lg"><i class="bi bi-plus-lg me-2"></i>เพิ่มตัวชี้วัด</a>
    </div>

    <div class="card border-0 shadow-sm">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover table-sm mb-0">
            <thead class="table-light fw-semibold">
          <tr>
            <th>#</th>
            <th>ลำดับ</th>
            <th>ชื่อตัวชี้วัด</th>
            <th>ค่าเป้าหมาย</th>
            <th>ผลการดำเนินงาน</th>
            <th>หน่วย</th>
            <th>รหัสโครงการ</th>
            <th>บันทึกโดย</th>
            <th>วันที่</th>
            <th>การจัดการ</th>
          </tr>
        </thead>
        <tbody>
          <% kpis.forEach(k => { %>
            <tr>
              <td><%= k.kp_id %></td>
              <td><%= k.kp_number %></td>
              <td><%= k.kp_subject %></td>
              <td><%= k.kp_plan %></td>
              <td><%= k.kp_action %></td>
              <td><%= k.kp_unit %></td>
              <td><%= k.kp_procode %></td>
              <td><%= k.kp_saveby %></td>
              <td><%= k.kp_savedate.toISOString().slice(0,10) %></td>
              <td>
                <a href="/plankpi/<%= k.kp_id %>/edit" class="btn btn-sm btn-warning">แก้ไข</a>
                <form action="/plankpi/<%= k.kp_id %>/delete" method="post" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('ลบตัวชี้วัดนี้?')">ลบ</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
          </table>
        </div>
      </div>
      <div class="card-footer bg-light text-muted small text-center py-2">
        <i class="bi bi-info-circle me-1"></i>มีทั้งหมด <%= kpis.length %> ตัวชี้วัด
      </div>
    </div>
</div>

<%- include('../partials/footer') %>
