        </thead>
        <tbody>
        <% processSteps.forEach(s => { %>
          <tr>
            <td class="text-center">ขั้นที่ <%= s.step %></td>
            <td class="text-center"><%= s.formatted %></td>
          </tr>
        <% }) %>
