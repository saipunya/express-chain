<%- include('../partials/header', { title: 'Use Car Records' }) %>

<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold">
      <i class="bi bi-truck-front text-primary"></i> Use Car Records
    </h1>
    <% if(user && user.mClass=='pbt'){ %>
      <a href="/usecar/create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-circle"></i> Add New Record
      </a>
    <% } %>
  </div>

  <div class="row g-4">
    <% usecars.forEach(usecar => { 
        const date = new Date(usecar.date_car);
        const options = { year: 'numeric', month: 'long', day: 'numeric' };
        const thaiDate = date.toLocaleDateString('th-TH', options);
        const saved = new Date(usecar.savedate);
        const diffMs = Date.now() - saved.getTime();
        const isNew = diffMs <= 7*24*60*60*1000; // within 7 days
    %>
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm border-0 h-100 position-relative">
          <% if(isNew){ %>
            <span class="position-absolute top-0 start-0 translate-middle-y ms-3 badge rounded-pill bg-success" style="margin-top:8px;">NEW</span>
          <% } %>
          <div class="card-body">
            <div class="d-flex align-items-center mb-3">
              <i class="bi bi-calendar-event text-primary fs-3 me-2"></i>
              <div>
                <h6 class="mb-0 fw-bold"><%= thaiDate %></h6>
                <small class="text-muted"><i class="bi bi-clock"></i> <%= usecar.time_car + ' à¸™.' %></small>
              </div>
            </div>
            <p class="mb-1"><i class="bi bi-activity text-success"></i> <strong>Activity:</strong> <%= usecar.act_car %></p>
            <p class="mb-3"><i class="bi bi-geo-alt text-danger"></i> <strong>Place:</strong> <%= usecar.place_car %></p>
            <div class="d-flex justify-content-between align-items-center">
              <a href="/usecar/view/<%= usecar.id_usecar %>" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-eye"></i> Read More
              </a>
              <% if(user && user.mClass=='admin'){ %>
              <div>
                <a href="/usecar/edit/<%= usecar.id_usecar %>" class="btn btn-warning btn-sm me-1">
                  <i class="bi bi-pencil"></i>
                </a>
                <form action="/usecar/delete/<%= usecar.id_usecar %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-danger btn-sm">
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('../partials/footer') %>
