<%- include('../partials/header.ejs') %>

<div class="container mt-5">
  <h1 class="mb-4 text-primary text-center fw-bold">
    <i class="bi bi-card-checklist me-2"></i> รายละเอียดกิจกรรม
  </h1>

  <div class="card shadow border-0 rounded-3">
    <div class="card-body">
      <% function formatThaiDate(dateStr) {
          const months = [
            "มกราคม", "กุมภาพันธ์", "มีนาคม", "เมษายน", "พฤษภาคม", "มิถุนายน",
            "กรกฎาคม", "สิงหาคม", "กันยายน", "ตุลาคม", "พฤศจิกายน", "ธันวาคม"
          ];
          const d = new Date(dateStr);
          if (isNaN(d)) return dateStr;
          return `${d.getDate()} ${months[d.getMonth()]} ${d.getFullYear() + 543}`;
        }
      %>

      <ul class="list-group list-group-flush fs-5">
        <li class="list-group-item d-flex align-items-center">
          <i class="bi bi-calendar-event text-primary me-2"></i>
          <strong class="me-2">วันที่:</strong> <%= formatThaiDate(activity.date_act) %>
        </li>
        <li class="list-group-item d-flex align-items-center">
          <i class="bi bi-clock text-primary me-2"></i>
          <strong class="me-2">เวลา:</strong> <%= activity.act_time %> น.
        </li>
        <li class="list-group-item d-flex align-items-center">
          <i class="bi bi-stars text-warning me-2"></i>
          <strong class="me-2">กิจกรรม:</strong> <%= activity.activity %>
        </li>
        <li class="list-group-item d-flex align-items-center">
          <i class="bi bi-geo-alt-fill text-danger me-2"></i>
          <strong class="me-2">สถานที่:</strong> <%= activity.place %>
        </li>
        <li class="list-group-item d-flex align-items-center">
          <i class="bi bi-person-circle text-success me-2"></i>
          <strong class="me-2">ผู้รับผิดชอบ:</strong> <%= activity.co_person %>
        </li>
        <li class="list-group-item d-flex align-items-center">
          <i class="bi bi-chat-dots text-info me-2"></i>
          <strong class="me-2">ความคิดเห็น:</strong> <%= activity.comment || '-' %>
        </li>
      </ul>
    </div>
  </div>

  <div class="text-center mt-4">
    <a href="/activities" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left-circle me-1"></i> กลับไปหน้ารายการ
    </a>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<%- include('../partials/footer.ejs') %>
