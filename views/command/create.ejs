<%- include('../partials/header', { title: 'Add Command' }) %>
<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4>การบันทึกข้อมูลคำสั่งสำนักงาน</h4>
        </div>
        <div class="card-body">
          <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>
          <form action="/command/create" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="com_no" class="form-label">เลขที่คำสั่ง</label>
              <input type="text" class="form-control" id="com_no" name="com_no" value="" required>
            </div>
        
            <div class="mb-3">
              <label for="com_date" class="form-label">วันที่</label>
              <input type="date" class="form-control" id="com_date" name="com_date" required>
            </div>
            <div class="mb-3">
              <label for="com_from" class="form-label">จาก</label>
              <input type="text" class="form-control" id="com_from" name="com_from" required>
            </div>
            <div class="mb-3">
              <label for="com_story" class="form-label">เรื่อง</label>
              <textarea class="form-control" id="com_story" name="com_story" rows="3" required></textarea>
            </div>
            <div class="mb-3">
              <label for="file" class="form-label">ไฟล์</label>
              <input type="file" class="form-control" id="file" name="file" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png">
              <div class="form-text">ขนาดไฟล์: PDF, DOC, DOCX, JPG, JPEG, PNG (ขนาดไม่เกิน 10MB)</div>
            </div>
            <div class="d-flex justify-content-between">
              <a href="/command" class="btn btn-secondary">กลับหน้าหลัก</a>
              <button type="submit" class="btn btn-primary">บันทึก</button>

            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// ตั้งค่า<lemma<lemmaเป็น<lemma
document.getElementById('com_date').value = new Date().toISOString().split('T')[0];
</script>

