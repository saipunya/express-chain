<%- include('partials/header') %>

<% const projectReports = (() => {
  try {
    return Array.isArray(projectReporting) ? projectReporting : [];
  } catch (err) {
    return [];
  }
})(); %>
<% const fiscalYearOptionsList = (typeof fiscalYearOptions !== 'undefined' && Array.isArray(fiscalYearOptions)) ? fiscalYearOptions : []; %>
<% const selectedFiscalYearSafe = typeof selectedFiscalYear !== 'undefined' ? selectedFiscalYear : null; %>
<% const fiscalMonthsList = (typeof fiscalMonths !== 'undefined' && Array.isArray(fiscalMonths)) ? fiscalMonths : []; %>
<% const fiscalRangeLabelText = typeof fiscalRangeLabel !== 'undefined' ? fiscalRangeLabel : ''; %>

<div class="py-3 py-md-4">
  <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start gap-3 mb-4">
    <div>
      <h1 class="h3 h4-md mb-2 d-flex align-items-center flex-wrap gap-2">
        <span class="p-2 bg-primary bg-opacity-10 rounded-circle flex-shrink-0">
          <i class="bi bi-clipboard-check text-primary fs-5"></i>
        </span>
        <span>แดชบอร์ดแผนงาน</span>
      </h1>
      <p class="text-muted mb-0 small">ภาพรวมแผนงานหลัก โครงการ กิจกรรม และตัวชี้วัด</p>
    </div>
    <div class="d-flex flex-wrap gap-2 w-100 w-lg-auto justify-content-lg-end">
      <a href="/plan" class="btn btn-outline-secondary btn-sm rounded-pill px-3 flex-grow-1 flex-lg-grow-0">
      <i class="bi bi-arrow-repeat me-1"></i>รีเฟรช
      </a>
      <a href="/planactivity/report" class="btn btn-outline-info btn-sm rounded-pill px-3 flex-grow-1 flex-lg-grow-0">
      <i class="bi bi-clipboard-data me-1"></i>รายงาน
      </a>
      <a href="/planproject/activities-overview" class="btn btn-success btn-sm rounded-pill px-3 flex-grow-1 flex-lg-grow-0">
      <i class="bi bi-plus-lg me-1"></i>โครงการ
      </a>
      <a href="/planproject/disbursal-dashboard" class="btn btn-info btn-sm rounded-pill px-3 flex-grow-1 flex-lg-grow-0">
      <i class="bi bi-plus-lg me-1"></i>ผลการเบิกจ่าย
      <a href="/planmain" class="btn btn-primary btn-sm rounded-pill px-3 flex-grow-1 flex-lg-grow-0">
      <i class="bi bi-plus-lg me-1"></i>แผนงาน
      </a>
    </div>
  </div>

<style>
  .stat-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    border-radius: 1rem;
    background: #fff;
  }
  .stat-icon {
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
  }
  .stat-label {
    margin: 0;
    font-size: .9rem;
    color: #6c757d;
  }
  .stat-value {
    margin: 0;
    font-weight: 700;
  }
  .stat-subtext {
    margin: 0;
    font-size: .85rem;
    color: #9aa0a6;
  }
  .dashboard-chip {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: .75rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
  }
  .chip-info { background: rgba(13, 202, 240, .15); color: #0dcaf0; }
  .chip-warning { background: rgba(255, 193, 7, .15); color: #f0ad4e; }
  .chip-primary { background: rgba(13, 110, 253, .1); color: #0d6efd; }
  .status-pills { display: flex; flex-direction: column; gap: 1rem; }
  .pill-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: .75rem;
    border-radius: 1rem;
    background: #f8f9fa;
  }
  .pill-icon {
    width: 3rem;
    height: 3rem;
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.4rem;
  }
  .pill-label { margin: 0; color: #6c757d; }
  .pill-value { font-size: 1.4rem; }
  .chart-wrapper { background: #f8f9fa; border-radius: 1rem; padding: 1rem; }
  .activity-line {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: .75rem 0;
    border-bottom: 1px solid #f1f3f5;
  }
  .activity-line:last-child { border-bottom: 0; }
  .section-header { display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem; margin-bottom: 1.5rem; }
  .dashboard-table thead { background: #f8f9fa; }
  .dashboard-table th { font-size: .9rem; text-transform: uppercase; letter-spacing: .03em; color: #6c757d; border: 0; }
  .dashboard-table td { border-top: 1px solid #f1f3f5; }
  .progress-thin { height: 6px; background: #e9ecef; border-radius: 999px; }
  .progress-thin .progress-bar { border-radius: 999px; }
  .card-chart { background: #f8f9fa; border-radius: 1rem; padding: 1rem; }
  .metric-pill {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 3rem;
    padding: .35rem .75rem;
    border-radius: 999px;
    font-weight: 600;
  }
  .pill-info { background: rgba(13, 202, 240, .15); color: #0dcaf0; }
  .pill-success { background: rgba(25, 135, 84, .15); color: #198754; }
  .timeline-label { margin-bottom: .75rem; }
  .timeline-label:last-child { margin-bottom: 0; }
  .project-month-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .project-month-card {
    border: 1px solid #e9ecef;
    border-radius: 1rem;
    padding: 1.25rem;
    background: #fff;
  }
  .project-month-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 0.75rem;
  }
  .project-month-chip {
    border-radius: 0.75rem;
    padding: 0.75rem;
    border: 1px solid rgba(13, 110, 253, 0.1);
    background: #f8f9ff;
    min-height: 100px;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  .project-month-chip.reported {
    border-color: rgba(25, 135, 84, 0.4);
    background: #e9f7ef;
  }
  .project-month-chip.pending {
    border-color: rgba(108, 117, 125, 0.3);
  }
  .project-month-chip__label {
    font-weight: 600;
  }
  .project-month-chip__disbursal {
    min-height: 1.5rem;
  }
  @media (max-width: 767px) {
    .stat-card { 
      flex-direction: column; 
      align-items: flex-start;
      gap: 0.75rem;
    }
    .stat-icon { 
      width: 2.5rem; 
      height: 2.5rem; 
      font-size: 1.1rem;
    }
    .stat-value { font-size: 1.5rem; }
    .status-pills { flex-direction: column; }
    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    .dashboard-table {
      font-size: 0.85rem;
    }
    .dashboard-table th,
    .dashboard-table td {
      padding: 0.5rem !important;
    }
  }
  @media (max-width: 575px) {
    h1 { font-size: 1.5rem !important; }
    .btn-sm { font-size: 0.8rem; padding: 0.4rem 0.8rem; }
    .stat-card { padding: 1rem; }
    .card-body { padding: 1rem !important; }
  }
</style>
  <!-- Summary cards -->
  <div class="row g-3 g-lg-4 mb-4">
    <div class="col-12 col-sm-6 col-lg-3">
      <div class="stat-card shadow-sm">
        <div class="stat-icon bg-primary-subtle text-primary">
          <i class="bi bi-journal-text"></i>
        </div>
        <div>
          <p class="stat-label">แผนงานหลัก</p>
          <h2 class="stat-value"><%= planStats.totalPlans %></h2>
          <p class="stat-subtext">ทั้งหมดในระบบ</p>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
      <div class="stat-card shadow-sm">
        <div class="stat-icon bg-success-subtle text-success">
          <i class="bi bi-kanban"></i>
        </div>
        <div>
          <p class="stat-label">โครงการทั้งหมด</p>
          <h2 class="stat-value"><%= projectStats.total %></h2>
          <p class="stat-subtext">รวมโครงการทุกสถานะ</p>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
      <div class="stat-card shadow-sm">
        <div class="stat-icon bg-warning-subtle text-warning">
          <i class="bi bi-list-task"></i>
        </div>
        <div>
          <p class="stat-label">กิจกรรมทั้งหมด</p>
          <h2 class="stat-value"><%= activityStats.total %></h2>
          <p class="stat-subtext">กำลังติดตาม <%= activityStats.status.inProgress %> รายการ</p>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
      <div class="stat-card shadow-sm">
        <div class="stat-icon bg-info-subtle text-info">
          <i class="bi bi-graph-up"></i>
        </div>
        <div>
          <p class="stat-label">ตัวชี้วัด (KPI)</p>
          <h2 class="stat-value"><%= kpiStats.total %></h2>
          <p class="stat-subtext">พร้อมสำหรับรายงาน</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Status distribution + Charts -->
  <div class="row g-3 g-lg-4 mb-4">
    <div class="col-12 col-xl-8">
      <div class="card border-0 shadow-sm h-100 hover-card">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
            <div class="d-flex align-items-center gap-2">
              <span class="dashboard-chip chip-info">
                <i class="bi bi-kanban"></i>
              </span>
              <div>
                <h2 class="h5 mb-0">สถานะโครงการ</h2>
                <p class="text-muted small mb-0">สัดส่วนโครงการในแต่ละสถานะ</p>
              </div>
            </div>
            <a href="/planproject" class="btn btn-outline-primary btn-sm rounded-pill px-3">
              <i class="bi bi-arrow-right me-1"></i>ดูรายละเอียดโครงการ
            </a>
          </div>
          <div class="row g-4">
            <div class="col-12 col-md-6">
              <div class="status-pills">
                <div class="pill-item">
                  <div class="pill-icon bg-light text-secondary"><i class="bi bi-clock"></i></div>
                  <div>
                    <p class="pill-label">ยังไม่ดำเนินการ</p>
                    <strong class="pill-value"><%= projectStats.status.notStarted %></strong>
                  </div>
                </div>
                <div class="pill-item">
                  <div class="pill-icon bg-warning-subtle text-warning"><i class="bi bi-hourglass-split"></i></div>
                  <div>
                    <p class="pill-label">ระหว่างดำเนินการ</p>
                    <strong class="pill-value"><%= projectStats.status.inProgress %></strong>
                  </div>
                </div>
                <div class="pill-item">
                  <div class="pill-icon bg-success-subtle text-success"><i class="bi bi-check-circle"></i></div>
                  <div>
                    <p class="pill-label">สำเร็จแล้ว</p>
                    <strong class="pill-value"><%= projectStats.status.done %></strong>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-12 col-md-6">
              <div class="chart-wrapper">
                <canvas id="chartProjectStatus" height="220"></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 col-xl-4">
      <div class="card border-0 shadow-sm h-100 hover-card">
        <div class="card-body p-4">
          <div class="d-flex align-items-center gap-2 mb-4">
            <span class="dashboard-chip chip-warning">
              <i class="bi bi-list-task"></i>
            </span>
            <div>
              <h2 class="h5 mb-0">ภาพรวมกิจกรรม</h2>
              <p class="text-muted small mb-0">แยกตามสถานะล่าสุด</p>
            </div>
          </div>
          <ul class="list-unstyled mb-0">
            <li class="activity-line">
              <div>
                <p class="mb-0 fw-semibold">อยู่ระหว่างดำเนินการ</p>
                <small class="text-muted">รอดูผลลัพธ์ต่อเนื่อง</small>
              </div>
              <span class="badge bg-warning-subtle text-warning"><%= activityStats.status.inProgress %></span>
            </li>
            <li class="activity-line">
              <div>
                <p class="mb-0 fw-semibold">ยังไม่ดำเนินการ</p>
                <small class="text-muted">รอเริ่มดำเนินการ</small>
              </div>
              <span class="badge bg-secondary-subtle text-dark"><%= activityStats.status.notStarted %></span>
            </li>
            <li class="activity-line">
              <div>
                <p class="mb-0 fw-semibold">เสร็จสมบูรณ์</p>
                <small class="text-muted">กิจกรรมที่จบแล้ว</small>
              </div>
              <span class="badge bg-success-subtle text-success"><%= activityStats.status.done %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>


  <!-- Overview by main plan -->
  <div class="card border-0 shadow-sm mb-4 hover-card">
    <div class="card-body p-4">
      <div class="section-header">
        <div class="d-flex align-items-center gap-2">
          <span class="dashboard-chip chip-primary">
            <i class="bi bi-journal-text"></i>
          </span>
          <div>
            <h2 class="h5 mb-0">ภาพรวมตามแผนงานหลัก</h2>
            <p class="text-muted small mb-0">ดูจำนวนโครงการที่ผูกกับแต่ละแผน</p>
          </div>
        </div>
        <a href="/planmain" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
          <i class="bi bi-gear me-1"></i>จัดการแผนงานหลัก
        </a>
      </div>
      <div class="table-responsive mb-0">
        <table class="table align-middle mb-0 dashboard-table">
          <thead>
            <tr>
              <th>ชื่อแผนงานหลัก</th>
              <th class="text-center">จำนวนโครงการ</th>
              <th class="text-center">โครงการที่เสร็จแล้ว</th>
            </tr>
          </thead>
          <tbody>
            <% if (planOverview && planOverview.length) { %>
              <% planOverview.forEach(p => { %>
                <tr>
                  <td>
                    <div class="fw-semibold"><%= p.ma_subject %></div>
                    <small class="text-muted">รหัส: <%= p.ma_code %></small>
                  </td>
                  <td class="text-center">
                    <span class="metric-pill pill-info"><%= p.project_count || 0 %></span>
                  </td>
                  <td class="text-center">
                    <span class="metric-pill pill-success"><%= p.done_projects || 0 %></span>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="3" class="text-center text-muted py-4">
                  <i class="bi bi-inbox fs-3 mb-2 d-block text-muted"></i>
                  ยังไม่มีข้อมูลแผนงานหลัก
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="card border-0 shadow-sm mb-4 hover-card">
    <div class="card-body p-4">
      <div class="section-header">
        <div class="d-flex align-items-center gap-2">
          <span class="dashboard-chip chip-info">
            <i class="bi bi-bar-chart-line"></i>
          </span>
          <div>
            <h2 class="h5 mb-0">ผลการรายงานตามโครงการ</h2>
            <p class="text-muted small mb-0">ดูความคืบหน้าของกิจกรรมและ KPI</p>
          </div>
        </div>
        <a href="/planactivity/report" class="btn btn-outline-info btn-sm rounded-pill px-3">
          <i class="bi bi-clipboard-data me-1"></i>จัดการรายงานรายเดือน
        </a>
      </div>

      <!-- Bar chart: ความก้าวหน้าตามโครงการ -->
      <div class="card-chart mb-4">
        <canvas id="chartProjectProgress" height="180"></canvas>
      </div>

      <div class="table-responsive mb-0">
        <table class="table align-middle dashboard-table mb-0">
          <thead>
            <tr>
              <th>โครงการ</th>
              <th class="text-center">ร้อยละกิจกรรม</th>
              <th class="text-center">ผลตัวชี้วัด / เป้า</th>
              <th style="width: 220px;">เดือนที่รายงานล่าสุด</th>
              <th style="width: 160px;">การจัดการ</th>
            </tr>
          </thead>
          <tbody>
            <% if (projectReports.length) { %>
              <% projectReports.forEach((report) => { const totalActivities = Number(report.total_activities || 0); const completedActivities = Number(report.completed_activities || 0); const totalPlan = Number(report.total_plan || 0); const cumulativeActual = Number(report.cumulative_actual || 0); const percent = report.achievementPercent; %>
                <tr>
                  <td>
                    <div class="fw-semibold"><%= report.pro_code %> - <%= report.pro_name || '-' %></div>
                    <div class="text-muted small">กิจกรรมทั้งหมด <%= totalActivities %> | KPIs <%= report.total_kpis || 0 %></div>
                  </td>
                  <td class="text-center">
                    <% const activityPercent = totalActivities > 0 ? (completedActivities / totalActivities * 100) : 0; %>
                    <div class="fw-semibold mb-1"><%= Math.round(activityPercent) %>%</div>
                    <div class="progress progress-thin">
                      <div class="progress-bar bg-info" style="width: <%= Math.round(activityPercent) %>%;"></div>
                    </div>
                    <small class="text-muted">(<%= completedActivities %>/<%= totalActivities %>)</small>
                  </td>
                  <td class="text-center">
                    <% if (totalPlan > 0) { %>
                      <div class="fw-semibold text-primary mb-1">
                        <%= cumulativeActual.toLocaleString('th-TH', { maximumFractionDigits: 2 }) %> / <%= totalPlan.toLocaleString('th-TH', { maximumFractionDigits: 0 }) %>
                      </div>
                      <div class="progress progress-thin">
                        <div class="progress-bar <%= percent >= 100 ? 'bg-success' : percent >= 70 ? 'bg-warning' : 'bg-danger' %>" style="width: <%= Math.round(Math.min(percent, 100)) %>%;"></div>
                      </div>
                      <small class="text-muted">คิดเป็น <strong class="<%= percent >= 100 ? 'text-success' : percent >= 70 ? 'text-warning' : 'text-danger' %>"><%= percent.toFixed(1) %>%</strong></small>
                    <% } else { %>
                      <span class="badge bg-secondary-subtle text-dark">ยังไม่กำหนดเป้า</span>
                    <% } %>
                  </td>
                  <td>
                    <div class="timeline-label">
                      <small class="text-muted d-block">กิจกรรม</small>
                      <strong><%= report.latestActivityLabel ? 'เดือน ' + report.latestActivityLabel : '-' %></strong>
                    </div>
                    <div class="timeline-label">
                      <small class="text-muted d-block">ตัวชี้วัด</small>
                      <strong class="text-success"><%= report.latestKpiLabel ? 'เดือน ' + report.latestKpiLabel : '-' %></strong>
                    </div>
                  </td>
                  <td>
                    <div class="d-grid gap-2">
                      <a href="/planproject/summary/<%= report.pro_code %>" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-speedometer2 me-1"></i>สรุปโครงการ
                      </a>
                      <button type="button" class="btn btn-outline-info btn-sm" onclick="showActivitiesModal('<%= report.pro_code %>', '<%= report.pro_name || '-' %>')">
                        <i class="bi bi-list-check me-1"></i>ดูกิจกรรม
                      </button>
                      <a href="/planactivity/report?pro_code=<%= encodeURIComponent(report.pro_code) %>" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-eye me-1"></i>รายงานผล
                      </a>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5" class="text-center text-muted py-4">
                  <i class="bi bi-clipboard-x fs-3 mb-2 d-block text-muted"></i>
                  ยังไม่มีโครงการให้แสดงผลรายงาน
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="card border-0 shadow-sm mb-4 hover-card">
    <div class="card-body p-4">
      <div class="section-header flex-column flex-md-row align-items-start">
        <div>
          <h2 class="h5 mb-1">รายงานประจำปีงบประมาณ</h2>
          <p class="text-muted small mb-0">แสดงว่าเดือนใดมีการรายงานผลการดำเนินงานและการเบิกจ่ายของแต่ละโครงการ</p>
        </div>
        <form class="d-flex gap-2 align-items-center" method="get">
          <label class="visually-hidden" for="fySelect">ปีงบประมาณ</label>
          <select name="fy" id="fySelect" class="form-select form-select-sm">
            <% fiscalYearOptionsList.forEach((option) => { %>
              <option value="<%= option.value %>" <%= option.value === selectedFiscalYearSafe ? 'selected' : '' %>><%= option.label %></option>
            <% }) %>
          </select>
          <button type="submit" class="btn btn-outline-primary btn-sm">แสดง</button>
        </form>
      </div>
      <p class="text-muted small mb-3">ช่วง <%= fiscalRangeLabelText %></p>
      <% if (projectReports.length) { %>
        <div class="project-month-list">
          <% projectReports.forEach((report, index) => { %>
            <div class="project-month-card">
              <div class="d-flex justify-content-between align-items-start flex-wrap gap-2 mb-3">
                <div class="flex-grow-1">
