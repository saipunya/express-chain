<%- include('../partials/header.ejs') %>

<% const isAdmin = (typeof user !== 'undefined' && user && user.mClass === 'pbt'); %>
<% function formatDate(d){ try { const dt = new Date(d); if (isNaN(dt)) return ''; return dt.toLocaleDateString('th-TH', { year:'numeric', month:'short', day:'numeric' }); } catch(e){ return ''; } } %>

<div class="meetingroom-wrapper py-3 py-md-4">
  <div class="container">
    <!-- Page header -->
    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2 mb-3 mb-md-4">
      <div>
        <h1 class="h3 h2-md fw-bold mb-1"><i class="bi bi-calendar-week me-2 text-primary"></i>ตารางการใช้ห้องประชุม</h1>
        <div class="text-muted small">ดูตารางการใช้ห้อง ประชุม แก้ไข หรือลบรายการ (เฉพาะผู้ดูแล)</div>
      </div>
      <div class="d-flex flex-wrap gap-2">
        <button id="btnPrint" class="btn btn-outline-dark"><i class="bi bi-printer me-1"></i> พิมพ์</button>
        <button id="btnCsv" class="btn btn-outline-success"><i class="bi bi-filetype-csv me-1"></i> ส่งออก CSV</button>
        <% if (user) { %>
          <a href="/meetingroom/create" class="btn btn-primary"><i class="bi bi-plus-circle me-1"></i> เพิ่มการจอง</a>
        <% } %>
        <a href="/dashboard" class="btn btn-outline-secondary d-none d-md-inline-flex"><i class="bi bi-speedometer2 me-1"></i> แดชบอร์ด</a>
      </div>
    </div>

    <!-- Add create booking button -->
    <div class="d-flex justify-content-end mb-3">
      <a href="/meetingroom/create" class="btn btn-success">เพิ่มการจองห้องประชุม</a>
    </div>

    <!-- Tools: Search + Filter -->
    <div class="card border-0 shadow-sm mb-3 d-print-none">
      <div class="card-body">
        <div class="row g-2 g-md-3 align-items-center">
          <div class="col-12 col-md-6 col-lg-5">
            <div class="input-group">
              <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
              <input id="searchInput" type="search" class="form-control" placeholder="ค้นหาเรื่อง ห้อง ผู้รับผิดชอบ..." autocomplete="off">
            </div>
          </div>
          <div class="col-6 col-md-3 col-lg-3">
            <select id="timeFilter" class="form-select">
              <option value="all">ทั้งหมด</option>
              <option value="upcoming">เฉพาะอนาคต</option>
              <option value="past">ที่ผ่านมา</option>
            </select>
          </div>
          <div class="col-6 col-md-3 col-lg-2">
            <input id="monthFilter" type="month" class="form-control" placeholder="เดือน">
          </div>
          <div class="col-12 col-md-12 col-lg-2 text-end">
            <button id="clearFilter" class="btn btn-light w-100 w-md-auto"><i class="bi bi-x-circle me-1"></i> ล้างตัวกรอง</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Data card (screen only) -->
    <div class="card border-0 shadow-sm d-print-none">
      <div class="card-body p-0">
        <!-- Table (desktop) -->
        <div class="table-responsive d-none d-lg-block">
          <table class="table table-hover table-nowrap align-middle mb-0">
            <thead class="table-light sticky-top-subtle">
              <tr>
                <th class="text-muted small fw-semibold">วันที่</th>
                <th class="text-muted small fw-semibold">เวลา</th>
                <th class="text-muted small fw-semibold">เรื่อง</th>
                <th class="text-muted small fw-semibold text-center">รายละเอียด</th>
              </tr>
            </thead>
            <tbody id="meetingTbody">
              <% (meetings || []).forEach(m => { %>
                <% const isoDate = m.mee_date ? new Date(m.mee_date).toISOString().slice(0,10) : ''; %>
                <% const saveDateIso = m.mee_savedate ? new Date(m.mee_savedate).toISOString().slice(0,10) : ''; %>
                <tr data-id="<%= m.mee_id %>" data-date="<%= isoDate %>"
                    data-subject="<%= (m.mee_subject || '').toLowerCase() %>"
                    data-room="<%= (m.mee_room || '').toLowerCase() %>"
                    data-respon="<%= (m.mee_respon || '').toLowerCase() %>">
                  <td>
                    <span class="fw-semibold"><%= formatDate(m.mee_date) %></span>
                    <span class="ms-1 badge rounded-pill <%= (new Date(m.mee_date) >= new Date(new Date().toISOString().slice(0,10))) ? 'bg-success-subtle text-success' : 'bg-secondary-subtle text-secondary' %>">
                      <%= (new Date(m.mee_date) >= new Date(new Date().toISOString().slice(0,10))) ? 'อนาคต' : 'ผ่านมา' %>
                    </span>
                  </td>
                  <td><span class="badge bg-primary-subtle text-primary"><i class="bi bi-clock me-1"></i><%= m.mee_time %></span></td>
                  <td class="w-35 cell-subject"><div class="fw-semibold text-dark subject-text"><%= m.mee_subject %></div></td>
                  <td class="text-center">
                    <button type="button" class="btn btn-sm btn-outline-secondary btn-detail"
                      data-id="<%= m.mee_id %>"
                      data-date="<%= isoDate %>"
                      data-date-display="<%= formatDate(m.mee_date) %>"
                      data-time="<%= m.mee_time %>"
                      data-subject="<%- (m.mee_subject || '').replace(/"/g,'&quot;') %>"
                      data-room="<%- (m.mee_room || '').replace(/"/g,'&quot;') %>"
                      data-respon="<%- (m.mee_respon || '').replace(/"/g,'&quot;') %>"
                      data-saveby="<%- (m.mee_saveby || '').replace(/"/g,'&quot;') %>"
                      data-savedate="<%= saveDateIso %>"
                      data-savedate-display="<%= formatDate(m.mee_savedate) %>"
                      data-bs-toggle="modal" data-bs-target="#detailModal">
                      <i class="bi bi-eye me-1"></i> ดูรายละเอียด
                    </button>
                  </td>
                </tr>
              <% }) %>
              <% if (!meetings || meetings.length === 0) { %>
                <tr><td colspan="4" class="text-center text-muted py-4"><i class="bi bi-inbox me-2"></i>ไม่มีข้อมูล</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <!-- Mobile Cards -->
        <div class="d-lg-none p-2">
          <div id="meetingCards" class="row g-2">
            <% (meetings || []).forEach(m => { %>
              <% const isoDate = m.mee_date ? new Date(m.mee_date).toISOString().slice(0,10) : ''; %>
              <% const saveDateIso = m.mee_savedate ? new Date(m.mee_savedate).toISOString().slice(0,10) : ''; %>
              <div class="col-12" data-card data-date="<%= isoDate %>"
                   data-subject="<%= (m.mee_subject || '').toLowerCase() %>"
                   data-room="<%= (m.mee_room || '').toLowerCase() %>"
                   data-respon="<%= (m.mee_respon || '').toLowerCase() %>">
                <div class="card border-0 shadow-sm h-100">
                  <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-start mb-1">
                      <div class="fw-bold"><i class="bi bi-calendar-event text-primary me-1"></i><%= formatDate(m.mee_date) %></div>
                      <span class="badge rounded-pill <%= (new Date(m.mee_date) >= new Date(new Date().toISOString().slice(0,10))) ? 'bg-success-subtle text-success' : 'bg-secondary-subtle text-secondary' %>">
                        <%= (new Date(m.mee_date) >= new Date(new Date().toISOString().slice(0,10))) ? 'อนาคต' : 'ผ่านมา' %>
                      </span>
                    </div>
                    <div class="mb-2">
                      <span class="badge bg-primary-subtle text-primary"><i class="bi bi-clock me-1"></i><%= m.mee_time %></span>
                      <span class="badge bg-info-subtle text-info"><i class="bi bi-geo-alt me-1"></i><%= m.mee_room %></span>
                    </div>
                    <div class="mb-2">
                      <div class="fw-semibold"><%= m.mee_subject %></div>
                      <div class="text-muted small"><i class="bi bi-person-circle me-1"></i><%= m.mee_respon %></div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                      <small class="text-muted">บันทึกโดย <strong class="text-dark"><%= m.mee_saveby %></strong> · <%= formatDate(m.mee_savedate) %></small>
                      <button type="button" class="btn btn-sm btn-outline-secondary btn-detail"
                        data-id="<%= m.mee_id %>"
                        data-date="<%= isoDate %>"
                        data-date-display="<%= formatDate(m.mee_date) %>"
                        data-time="<%= m.mee_time %>"
                        data-subject="<%- (m.mee_subject || '').replace(/"/g,'&quot;') %>"
                        data-room="<%- (m.mee_room || '').replace(/"/g,'&quot;') %>"
                        data-respon="<%- (m.mee_respon || '').replace(/"/g,'&quot;') %>"
                        data-saveby="<%- (m.mee_saveby || '').replace(/"/g,'&quot;') %>"
                        data-savedate="<%= saveDateIso %>"
                        data-savedate-display="<%= formatDate(m.mee_savedate) %>"
                        data-bs-toggle="modal" data-bs-target="#detailModal">
                        <i class="bi bi-eye"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
            <% if (!meetings || meetings.length === 0) { %>
              <div class="col-12"><div class="text-center text-muted py-4"><i class="bi bi-inbox me-2"></i>ไม่มีข้อมูล</div></div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Print-only table (always shows all data) -->
    <div class="d-none d-print-block">
      <h3 class="text-center mb-3">ตารางการใช้ห้องประชุม</h3>
      <table class="table table-bordered table-sm">
        <thead>
          <tr>
            <th style="width:60px;">#</th>
            <th style="width:120px;">วันที่</th>
            <th style="width:120px;">เวลา</th>
            <th>เรื่อง</th>
            <th style="width:160px;">ห้อง</th>
            <th style="width:180px;">ผู้รับผิดชอบ</th>
          </tr>
        </thead>
        <tbody>
          <% (meetings || []).forEach(m => { %>
            <tr>
              <td><%= m.mee_id %></td>
              <td><%= formatDate(m.mee_date) %></td>
              <td><%= m.mee_time %></td>
              <td style="word-break:break-word; overflow-wrap:anywhere;"><%= m.mee_subject %></td>
              <td><%= m.mee_room %></td>
              <td><%= m.mee_respon %></td>
            </tr>
          <% }) %>
          <% if (!meetings || meetings.length === 0) { %>
            <tr><td colspan="6" class="text-center">ไม่มีข้อมูล</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Detail Modal -->
    <div class="modal fade" id="detailModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title"><i class="bi bi-info-circle me-1"></i> รายละเอียดการใช้ห้อง</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-2"><strong>เรื่อง:</strong> <span id="md-subject"></span></div>
            <div class="mb-2"><strong>วันที่/เวลา:</strong> <span id="md-datetime"></span></div>
            <div class="mb-2"><strong>ห้อง:</strong> <span id="md-room"></span></div>
            <div class="mb-2"><strong>ผู้รับผิดชอบ:</strong> <span id="md-respon"></span></div>
            <div class="text-muted small">บันทึกโดย <span id="md-saveby"></span> · <span id="md-savedate"></span></div>
          </div>
          <div class="modal-footer">
            <% if (isAdmin) { %>
              <a id="md-edit" href="#" class="btn btn-primary btn-sm"><i class="bi bi-pencil-square me-1"></i> แก้ไข</a>
              <form id="md-delete-form" method="POST" class="d-inline" onsubmit="return confirm('ยืนยันการลบรายการนี้?')">
                <button type="submit" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash me-1"></i> ลบ</button>
              </form>
            <% } %>
            <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">ปิด</button>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<style>
  .meetingroom-wrapper{background:linear-gradient(135deg,#f8fafc 0%,#eef2f7 100%);} 
  .table-nowrap td, .table-nowrap th{white-space:nowrap;}
  /* Allow subject column to wrap */
  .table-nowrap td.cell-subject{white-space:normal !important;}
  .subject-text{white-space:normal !important; word-break:break-word; overflow-wrap:anywhere;}
  .sticky-top-subtle{position:sticky; top:0; z-index:5;}
  .w-35{width:35%;}
  @media (max-width: 991.98px){ .w-35{width:auto;} }
  @media print{
    #searchInput, #timeFilter, #monthFilter, #clearFilter, #btnPrint, #btnCsv, .navbar, footer { display:none !important; }
    .card{ box-shadow:none !important; }
    body{ background:#fff !important; }
    .meetingroom-wrapper{ background:#fff !important; }
  }
</style>

<script>
  (function(){
    const search = document.getElementById('searchInput');
    const filter = document.getElementById('timeFilter');
    const monthFilter = document.getElementById('monthFilter');
    const clearBtn = document.getElementById('clearFilter');
    const btnPrint = document.getElementById('btnPrint');
    const btnCsv = document.getElementById('btnCsv');
    const todayStr = new Date().toISOString().slice(0,10);
    const tbody = document.getElementById('meetingTbody');
    const rows = Array.from(tbody ? tbody.querySelectorAll('tr[data-id]') : []);
    const cards = Array.from(document.querySelectorAll('[data-card]'));

    function matchFilter(dateStr){
      if (filter.value === 'all') return true;
      if (!dateStr) return false;
      if (filter.value === 'upcoming') return dateStr >= todayStr;
      if (filter.value === 'past') return dateStr < todayStr;
      return true;
    }
    function matchMonth(dateStr){
      const m = (monthFilter && monthFilter.value) ? monthFilter.value : '';
      if (!m) return true;
      return (dateStr || '').slice(0,7) === m;
    }
    function matchSearch(target){
      const q = (search.value || '').trim().toLowerCase();
      if (!q) return true;
      return target.includes(q);
    }
    function apply(){
      rows.forEach(tr => {
        const dateStr = tr.getAttribute('data-date') || '';
        const blob = [tr.getAttribute('data-subject')||'', tr.getAttribute('data-room')||'', tr.getAttribute('data-respon')||''].join(' ');
        const ok = matchFilter(dateStr) && matchMonth(dateStr) && matchSearch(blob);
        tr.style.display = ok ? '' : 'none';
      });
      cards.forEach(card => {
        const dateStr = card.getAttribute('data-date') || '';
        const blob = [card.getAttribute('data-subject')||'', card.getAttribute('data-room')||'', card.getAttribute('data-respon')||''].join(' ');
        const ok = matchFilter(dateStr) && matchMonth(dateStr) && matchSearch(blob);
        card.style.display = ok ? '' : 'none';
      });
    }

    function exportCsv(){
      const headers = ['ID','วันที่','เวลา','เรื่อง','ห้อง','ผู้รับผิดชอบ','ผู้บันทึก','บันทึกเมื่อ'];
      const visRows = rows.filter(r => r.style.display !== 'none');
      const data = visRows.map(r => {
        const id = r.getAttribute('data-id') || '';
        const btn = r.querySelector('.btn-detail');
        const d = btn ? btn.dataset : {};
        return [
          id,
          (d.dateDisplay || d.date || '').toString().trim(),
          (d.time || '').toString().trim(),
          (d.subject || '').toString().trim(),
          (d.room || '').toString().trim(),
          (d.respon || '').toString().trim(),
          (d.saveby || '').toString().trim(),
          (d.savedateDisplay || d.savedate || '').toString().trim()
        ];
      });
      const csv = [headers, ...data].map(row => row.map(v => '"' + (v || '').replace(/"/g,'""') + '"').join(',')).join('\n');
      const blob = new Blob(["\ufeff" + csv], {type:'text/csv;charset=utf-8;'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      const month = (monthFilter && monthFilter.value) ? '_' + monthFilter.value : '';
      a.download = 'meetingroom' + month + '.csv';
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);
    }

    if (search) search.addEventListener('input', apply);
    if (filter) filter.addEventListener('change', apply);
    if (monthFilter) monthFilter.addEventListener('change', apply);
    if (clearBtn) clearBtn.addEventListener('click', function(){
      if (search) search.value='';
      if (filter) filter.value='all';
      if (monthFilter) monthFilter.value='';
      apply();
    });
    if (btnPrint) btnPrint.addEventListener('click', () => window.print());
    if (btnCsv) btnCsv.addEventListener('click', exportCsv);

    apply();
  })();

  (function(){
    function byId(id){ return document.getElementById(id); }
    document.querySelectorAll('.btn-detail').forEach(btn => {
      btn.addEventListener('click', () => {
        const d = btn.dataset;
        const dt = (d.dateDisplay || d.date || '');
        byId('md-subject').textContent = d.subject || '';
        byId('md-datetime').textContent = (dt ? dt : '') + (d.time ? ' · ' + d.time : '');
        byId('md-room').textContent = d.room || '';
        byId('md-respon').textContent = d.respon || '';
        byId('md-saveby').textContent = d.saveby || '';
        byId('md-savedate').textContent = d.savedateDisplay || d.savedate || '';
        var edit = byId('md-edit');
        var delForm = byId('md-delete-form');
        if (edit) edit.href = '/meetingroom/edit/' + d.id;
        if (delForm) delForm.action = '/meetingroom/delete/' + d.id;
      });
    });
  })();
</script>

<%- include('../partials/footer.ejs') %>
