<%- include('../partials/header', { title: 'โครงการ' }) %>
<% const canManage = user && (user.mClass=='admin' || user.mClass=='pbt'); %>

<style>
  .page-header {
    background: linear-gradient(135deg, var(--grad-start, #10b981), var(--grad-end, #059669));
    color: white;
    padding: 2rem 0;
    margin-bottom: 2rem;
    border-radius: 0 0 1rem 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  .search-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(226, 232, 240, 0.8);
    border-radius: 1rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
    transform: translateY(-20px);
    margin-bottom: 0.5rem;
  }
  .project-card {
    transition: all 0.2s ease;
    border: 1px solid #f1f5f9;
    border-left: 4px solid #10b981;
    background: #fff;
    border-radius: 0.75rem;
  }
  .project-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
  }
  .year-badge {
    position: absolute;
    top: -10px;
    right: 15px;
    background: #10b981;
    color: white;
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    box-shadow: 0 2px 4px rgba(16, 185, 129, 0.2);
    font-weight: 600;
  }
  .project-icon {
    width: 48px;
    height: 48px;
    background: #ecfdf5;
    color: #10b981;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    flex-shrink: 0;
  }
</style>

<!-- Header Section -->
<div class="page-header text-center">
  <div class="container">
    <h1 class="h3 fw-bold mb-1">โครงการ</h1>
    <p class="mb-0 opacity-75 small">ระบบจัดเก็บเอกสารและข้อมูลโครงการ</p>
  </div>
</div>

<div class="container">
  <!-- Search & Filter -->
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="search-card p-3 p-md-4">
        <form class="row g-3" method="GET" action="">
          <div class="col-12 col-md d-flex gap-2">
            <div class="position-relative flex-grow-1">
              <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
              <input type="text" class="form-control rounded-pill ps-5 py-2 border-0 bg-light" 
                     name="search" placeholder="ค้นหาชื่อโครงการ..." value="<%= search || '' %>">
            </div>
            <button class="btn btn-success rounded-pill px-4" type="submit">ค้นหา</button>
          </div>
          <div class="col-auto d-flex gap-2 align-items-center">
            <% if(search) { %>
              <a href="/project" class="btn btn-light rounded-pill border" data-bs-toggle="tooltip" title="ล้างการค้นหา"><i class="bi bi-x-lg"></i></a>
            <% } %>
            <% if (canManage) { %>
              <a href="/project/create" class="btn btn-success rounded-pill px-3 shadow-sm">
                <i class="bi bi-plus-lg me-1"></i> <span class="d-none d-sm-inline">เพิ่มโครงการ</span>
              </a>
            <% } %>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Stats -->
  <div class="d-flex justify-content-between align-items-center mb-3 px-1">
    <small class="text-muted">
      <i class="bi bi-folder2-open me-1"></i> พบทั้งหมด <span class="fw-bold text-dark"><%= (projects && projects.length) ? projects.length : 0 %></span> รายการ
    </small>
  </div>

  <!-- Project Grid -->
  <div class="row g-3">
    <% if (projects && projects.length) { %>
      <% projects.forEach(p => { %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="project-card p-3 h-100 position-relative pt-4">
            <div class="year-badge">ปี <%= p.pro_year %></div>
            
            <div class="d-flex align-items-start gap-3">
              <div class="d-flex flex-column align-items-center gap-1">
                <div class="project-icon">
                  <i class="bi bi-kanban"></i>
                </div>
                <div class="mt-2 text-center w-100">
                   <div class="badge bg-light text-secondary border fw-normal" style="font-size: 0.65rem;">
                     เลขที่ <%= p.pro_no %>
                   </div>
                </div>
              </div>

              <div class="flex-grow-1 min-w-0">
                <% const thaiDate = new Date(p.pro_date).toLocaleDateString('th-TH', { day: 'numeric', month: 'short', year: '2-digit' }); %>
                <div class="text-muted small mb-1"><i class="bi bi-calendar4-week me-1"></i><%= thaiDate %></div>
                
                <h6 class="fw-bold text-dark mb-3 text-wrap" style="line-height: 1.5; min-height: 3rem;">
                  <%= p.pro_story %>
                </h6>

                <div class="d-flex justify-content-between align-items-center mt-auto pt-2 border-top">
                  <div>
                    <% if (user) { %>
                      <a href="/project/download/<%= p.pro_id %>" class="btn btn-sm btn-outline-success rounded-pill px-3" target="_blank">
                        <i class="bi bi-file-earmark-pdf me-1"></i> เปิดดู
                      </a>
                    <% } else { %>
                      <a href="/auth/login" class="btn btn-sm btn-light border rounded-pill px-3 text-muted">
                        <i class="bi bi-lock me-1"></i> Login
                      </a>
                    <% } %>
                  </div>

                  <% if (canManage) { %>
                    <div class="dropdown">
                      <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots"></i>
                      </button>
                      <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                        <li><a class="dropdown-item" href="/project/edit/<%= p.pro_id %>"><i class="bi bi-pencil me-2 text-warning"></i>แก้ไข</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                          <form action="/project/delete/<%= p.pro_id %>" method="POST" onsubmit="return confirm('ต้องการลบรายการนี้หรือไม่?')">
                            <button class="dropdown-item text-danger" type="submit"><i class="bi bi-trash me-2"></i>ลบ</button>
                          </form>
                        </li>
                      </ul>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <div class="text-center py-5 bg-white rounded-3 border border-dashed">
          <div class="mb-3 text-muted opacity-50">
            <i class="bi bi-inbox fs-1"></i>
          </div>
          <h5 class="text-muted">ไม่พบข้อมูลโครงการ</h5>
          <p class="small text-muted mb-0">ลองเปลี่ยนคำค้นหา หรือเริ่มต้นปีงบประมาณใหม่</p>
        </div>
      </div>
    <% } %>
  </div>
</div>
<script src="/js/project-search.js"></script>
<%- include('../partials/footer') %>
