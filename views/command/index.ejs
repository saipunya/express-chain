<%- include('../partials/header', { title: 'คำสั่งสำนักงาน' }) %>
<% const hasActions = user && (user.mClass=='pbt' || user.mClass=='admin'); %>

<style>
  :root {
    --primary: #60a5fa;
    --primary-light: #f0f9ff;
    --primary-lighter: #f8fcff;
    --text-primary: #334155;
    --text-secondary: #64748b;
    --text-muted: #94a3b8;
    --border-color: #e2e8f0;
    --bg-light: #fafbfc;
    --bg-lighter: #fcfdfe;
    --shadow-sm: 0 1px 2px rgba(15, 23, 42, 0.03);
    --shadow-md: 0 2px 4px rgba(15, 23, 42, 0.05);
    --shadow-lg: 0 4px 8px rgba(15, 23, 42, 0.06);
  }

  .page-header {
    background: linear-gradient(135deg, #dbeafe 0%, #e0f2fe 100%);
    color: #0c4a6e;
    padding: 2rem 0;
    margin-bottom: 2.5rem;
    box-shadow: var(--shadow-md);
  }

  .page-header h1 {
    font-weight: 700;
    letter-spacing: -0.5px;
    color: #0c4a6e;
  }

  .page-header p {
    opacity: 0.9;
    font-weight: 500;
    color: #075985;
  }

  .search-card {
    background: var(--bg-lighter);
    border: 1px solid var(--border-color);
    border-radius: 0.75rem;
    padding: 1.75rem;
    margin-bottom: 2rem;
    box-shadow: var(--shadow-sm);
  }

  .search-card .form-control {
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    font-size: 0.95rem;
    background: white;
    color: var(--text-primary);
    transition: all 0.2s ease;
  }

  .search-card .form-control::placeholder {
    color: var(--text-muted);
  }

  .search-card .form-control:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px var(--primary-light);
  }

  .command-card {
    background: var(--bg-lighter);
    border: 1px solid var(--border-color);
    border-radius: 0.75rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-sm);
    display: flex;
    flex-direction: column;
  }

  .command-card:hover {
    border-color: #cbd5e1;
    box-shadow: var(--shadow-md);
    transform: translateY(-1px);
  }

  .command-no-badge {
    background: #f0f9ff;
    color: #0369a1;
    padding: 0.5rem 0.875rem;
    border-radius: 0.5rem;
    font-size: 0.8rem;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    width: fit-content;
    border: 1px solid #bae6fd;
  }

  .command-title {
    font-size: 1.05rem;
    font-weight: 650;
    color: var(--text-primary);
    margin: 1rem 0 0.5rem 0;
    line-height: 1.6;
    word-break: break-word;
  }

  .command-date {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin: 0.75rem 0 1rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .command-date i {
    color: var(--primary);
    font-size: 1rem;
  }

  .command-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.25rem;
    margin: 1rem 0;
    padding-top: 1rem;
    border-top: 1px solid #f1f5f9;
    font-size: 0.875rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
  }

  .meta-item i {
    color: var(--primary);
    font-size: 1.1rem;
  }

  .action-buttons {
    display: flex;
    gap: 0.75rem;
    margin-top: auto;
    padding-top: 1rem;
    flex-wrap: wrap;
  }

  .btn-action {
    flex: 1;
    min-width: 140px;
    font-size: 0.85rem;
    font-weight: 500;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
  }

  .btn-action {
    background: #dbeafe;
    color: #0369a1;
    border: 1px solid #bae6fd;
  }

  .btn-action:hover {
    background: #bfdbfe;
    border-color: #7dd3fc;
    transform: translateY(-1px);
  }

  .stats-bar {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.75rem;
    background: var(--bg-light);
    border: 1px solid var(--border-color);
    border-radius: 0.75rem;
    margin-bottom: 2rem;
    box-shadow: var(--shadow-sm);
  }

  .stats-bar i {
    font-size: 1.5rem;
    color: #0369a1;
  }

  .stats-number {
    font-weight: 700;
    color: #0369a1;
    font-size: 1.5rem;
  }

  .stats-text {
    color: var(--text-secondary);
    font-size: 0.9rem;
    font-weight: 500;
  }

  .empty-state {
    text-align: center;
    padding: 3.5rem 2rem;
    background: var(--bg-light);
    border: 2px dashed #cbd5e1;
    border-radius: 0.75rem;
  }

  .empty-state i {
    font-size: 3rem;
    color: #cbd5e1;
    margin-bottom: 1rem;
    display: block;
  }

  .empty-state h5 {
    color: var(--text-primary);
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .empty-state p {
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
  }

  .dropdown-menu {
    border-radius: 0.5rem;
    border: 1px solid var(--border-color);
    background: white;
    box-shadow: var(--shadow-lg);
  }

  .dropdown-item {
    color: var(--text-primary);
    font-size: 0.9rem;
    padding: 0.6rem 1rem;
    transition: all 0.2s ease;
  }

  .dropdown-item:hover {
    background-color: #f0f9ff;
    color: #0369a1;
  }

  .btn.btn-primary {
    background: var(--primary);
    border-color: var(--primary);
    color: white;
  }

  .btn.btn-primary:hover {
    background: #3b82f6;
    border-color: #3b82f6;
  }

  .btn.btn-success {
    background: #86efac;
    border-color: #86efac;
    color: #15803d;
    font-weight: 500;
  }

  .btn.btn-success:hover {
    background: #65e892;
    border-color: #65e892;
  }

  @media (max-width: 768px) {
    .page-header {
      padding: 1.5rem 0 2rem;
      margin-bottom: 2rem;
    }

    .search-card {
      padding: 1.25rem;
    }

    .command-card {
      margin-bottom: 0.5rem;
      padding: 1.25rem;
    }

    .action-buttons {
      flex-direction: column;
      gap: 0.5rem;
    }

    .btn-action {
      min-width: auto;
      width: 100%;
    }

    .stats-bar {
      flex-direction: column;
      text-align: center;
      gap: 0.75rem;
    }
  }
</style>

<!-- Header Section -->
<div class="page-header">
  <div class="container">
    <h1 class="h2 mb-1">คำสั่งสำนักงาน</h1>
    <p class="mb-0 small">ระบบบริหารจัดการเอกสารคำสั่งอย่างมีประสิทธิภาพ</p>
  </div>
</div>

<div class="container">
  <!-- Search & Filter -->
  <div class="row justify-content-center mb-4">
    <div class="col-lg-8">
      <div class="search-card">
        <form method="GET" action="" class="row g-2 align-items-end">
          <div class="col-12 col-md">
            <div class="position-relative">
              <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
              <input type="text" class="form-control ps-5" 
                     name="search" placeholder="ค้นหาเลขที่ หรือ เรื่อง..." value="<%= search || '' %>">
            </div>
          </div>
          <div class="col-auto d-flex gap-2">
            <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i><span class="d-none d-sm-inline ms-2">ค้นหา</span></button>
            <% if(search) { %>
              <a href="/command" class="btn btn-outline-secondary" title="ล้างค่าค้นหา"><i class="bi bi-x-lg"></i></a>
            <% } %>
          </div>
          <% if(hasActions){ %>
            <div class="col-12 col-md-auto">
              <a href="/command/create" class="btn btn-success w-100 w-md-auto"><i class="bi bi-plus-lg me-2"></i>สร้างใหม่</a>
            </div>
          <% } %>
        </form>
      </div>
    </div>
  </div>

  <!-- Stats Bar -->
  <div class="stats-bar">
    <i class="bi bi-folder2-open"></i>
    <strong class="stats-number"><%= (commands && commands.length) ? commands.length : 0 %></strong>
    <span class="stats-text">รายการทั้งหมด</span>
  </div>

  <!-- Command List -->
  <div class="row g-3">
    <% if (commands && commands.length) { %>
      <% commands.forEach(c => { %>
        <div class="col-12 col-lg-6">
          <div class="command-card">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-start gap-2 mb-1">
              <span class="command-no-badge"><i class="bi bi-hash"></i><%= c.com_no %></span>
              <% if(hasActions){ %>
                <div class="dropdown">
                  <button class="btn btn-sm btn-light text-muted p-2" type="button" data-bs-toggle="dropdown" aria-label="เมนูการกระทำ">
                    <i class="bi bi-three-dots-vertical"></i>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="/command/edit/<%= c.command_id %>"><i class="bi bi-pencil me-2"></i>แก้ไข</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                      <form action="/command/delete/<%= c.command_id %>" method="POST" onsubmit="return confirm('ยืนยันการลบ?')">
                        <button class="dropdown-item text-danger" type="submit"><i class="bi bi-trash me-2"></i>ลบ</button>
                      </form>
                    </li>
                  </ul>
                </div>
              <% } %>
            </div>

            <!-- Title & Date -->
            <h5 class="command-title"><%= c.com_story %></h5>
            <% const thaiDate = new Date(c.com_date).toLocaleDateString('th-TH', { year: 'numeric', month: 'long', day: 'numeric' }); %>
            <div class="command-date"><i class="bi bi-calendar3"></i><%= thaiDate %></div>

            <!-- Meta -->
            <div class="command-meta">
              <div class="meta-item">
                <i class="bi bi-file-earmark-text"></i>
                <span>คำสั่งสำนักงาน</span>
              </div>
            </div>

            <!-- Actions -->
            <div class="action-buttons">
              <% if (user) { %>
                <a href="/command/download/<%= c.command_id %>" class="btn btn-sm btn-action" target="_blank">
                  <i class="bi bi-file-earmark-pdf-fill me-2"></i>เปิดอ่าน
                </a>
              <% } else { %>
                <a href="/auth/login" class="btn btn-sm btn-action">
                  <i class="bi bi-lock-fill me-2"></i>เข้าสู่ระบบ
                </a>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <div class="empty-state">
          <i class="bi bi-inbox"></i>
          <h5>ไม่พบข้อมูลคำสั่ง</h5>
          <p class="text-muted">ลองเปลี่ยนคำค้นหา หรือเพิ่มรายการใหม่</p>
          <% if(hasActions){ %>
            <a href="/command/create" class="btn btn-primary">
              <i class="bi bi-plus-lg me-2"></i>สร้างคำสั่งใหม่
            </a>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>