<%- include('../partials/header') %>

<div class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
      <div>
        <h1 class="h3 mb-1"><i class="bi bi-folder2 me-2"></i><%= title %></h1>
        <p class="text-muted small mb-0">จัดการและติดตามโครงการต่างๆ</p>
      </div>
      <div class="d-flex gap-2 flex-wrap">
        <a href="/planactivity" class="btn btn-outline-primary"><i class="bi bi-collection me-2"></i>ดูโครงการพร้อมกิจกรรม</a>
        <a href="/planproject/new" class="btn btn-success btn-lg"><i class="bi bi-plus-lg me-2"></i>เพิ่มโครงการใหม่</a>
      </div>
    </div>

    <div class="card border-0 shadow-sm mb-3">
      <div class="card-body">
        <form class="row g-2 align-items-end" method="GET" action="/planproject">
          <div class="col-md-4">
            <label class="form-label small text-muted">กรองตามผู้รับผิดชอบ</label>
            <select class="form-select" name="pro_respon_id">
              <option value="" <%= selectedResponId ? '' : 'selected' %>>ทั้งหมด</option>
              <% (users || []).forEach((u) => { %>
                <option value="<%= u.m_id %>" <%= Number(selectedResponId) === Number(u.m_id) ? 'selected' : '' %>>
                  <%= u.m_name %><%= u.m_user ? ' (@' + u.m_user + ')' : '' %>
                </option>
              <% }) %>
            </select>
          </div>
          <div class="col-md-8 d-flex gap-2">
            <button class="btn btn-primary" type="submit"><i class="bi bi-funnel me-2"></i>กรอง</button>
            <a class="btn btn-outline-secondary" href="/planproject"><i class="bi bi-x-circle me-2"></i>ล้างตัวกรอง</a>
          </div>
        </form>
      </div>
    </div>

    <div class="card border-0 shadow-sm">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover table-sm mb-0">
            <thead class="table-light fw-semibold">
              <tr>
                <th class="text-center" style="width: 5%">#</th>
              
                <th style="width: 15%">ชื่อโครงการ</th>
                <th style="width: 12%">เป้าหมาย</th>
                <th style="width: 10%">งบประมาณ</th>
                <th style="width: 8%">กลุ่ม</th>
                <th style="width: 10%">ผู้รับผิดชอบ</th>
                <th class="text-center" style="width: 8%">สถานะ</th>
                <th style="width: 8%">แผนงาน</th>

                
                <% if (user && user.mClass === 'admin') { %>
                  <th class="text-center" style="width: 10%">จัดการ</th>
                <% } %>
              </tr>
            </thead>
            <tbody>
              <% projects.forEach((p, idx) => { %>
                <tr class="align-middle">
                  <td class="text-center text-muted small"><%= idx + 1 %></td>
                  <td class="fw-500"><%= p.pro_subject %></td>
                  <td><small><%= p.pro_target %></small></td>
                  <td><small class="text-success fw-bold"><%= p.pro_budget ? p.pro_budget.toLocaleString('th-TH') : '-' %></small></td>
                  <td><small><%= p.pro_group %></small></td>
                  <td>
                    <div class="small"><%= p.respon_name || '-' %></div>
                    <% if (p.respon_username) { %>
                      <div class="small text-muted">@<%= p.respon_username %></div>
                    <% } %>
                  </td>
                  <td class="text-center">
                    <% if (p.pro_status === 2) { %>
                      <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>เสร็จแล้ว</span>
                    <% } else if (p.pro_status === 1) { %>
                      <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split me-1"></i>กำลังทำ</span>
                    <% } else { %>
                      <span class="badge bg-secondary"><i class="bi bi-clock me-1"></i>รอดำเนิน</span>
                    <% } %>
                  </td>
                  <td><small><%= p.pro_macode %></small></td>
                  <!-- ดูรายละเอียด planproject/summary -->
                 
                   
                
                  <% if (user && user.mClass === 'admin') { %>
                    <td class="text-center">
                    <a href="/planproject/summary/<%= p.pro_code %>?embed=1" class="btn btn-sm btn-outline-info me-1 js-open-summary" title="ดูรายละเอียด" data-bs-toggle="modal" data-bs-target="#planProjectSummaryModal" data-title="<%= p.pro_subject %>">
                      <i class="bi bi-info-circle"></i>
                    </a>
                      <a href="/planproject/edit/<%= p.pro_id %>" class="btn btn-sm btn-outline-primary me-1" title="แก้ไข">
                        <i class="bi bi-pencil-square"></i>
                      </a>
                      <form method="POST" action="/planproject/delete/<%= p.pro_id %>" class="d-inline" onsubmit="return confirm('ยืนยันการลบโครงการนี้?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger" title="ลบ">
                          <i class="bi bi-trash"></i>
                        </button>
                      </form>
                    </td>
                  <% } %>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="card-footer bg-light text-muted small text-center py-2">
        <i class="bi bi-info-circle me-1"></i>มีทั้งหมด <%= projects.length %> โครงการ
      </div>
    </div>
</div>

<!-- Summary Modal (iframe) -->
<div class="modal fade" id="planProjectSummaryModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-body p-0 position-relative">
        <button type="button" class="btn-close position-absolute top-0 end-0 m-2" data-bs-dismiss="modal" aria-label="Close"></button>
        <iframe id="summaryModalFrame" src="" style="width:100%; height:85vh; border:0;" title="รายละเอียดโครงการ"></iframe>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('click', function (e) {
    const btn = e.target.closest('.js-open-summary');
    if (!btn) return;
    const frame = document.getElementById('summaryModalFrame');
    const title = document.getElementById('summaryModalTitle');
    if (frame) frame.src = btn.getAttribute('href');
    if (title) title.textContent = btn.dataset.title || 'รายละเอียดโครงการ';
  });
  document.getElementById('planProjectSummaryModal')?.addEventListener('hidden.bs.modal', function () {
    const frame = document.getElementById('summaryModalFrame');
    if (frame) frame.src = '';
  });
</script>

<%- include('../partials/footer') %>
