<%- include('../partials/header') %>

<div class="py-4">
  <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
    <div>
      <h1 class="h3 mb-1"><i class="bi bi-list-check me-2"></i>กิจกรรมโครงการ</h1>
      <p class="text-muted small mb-0">จัดการกิจกรรมทั้งหมดในระบบ</p>
    </div>
    <div class="d-flex gap-2 flex-wrap">
      <a href="/planactivity/report" class="btn btn-outline-info btn-lg">
        <i class="bi bi-clipboard-data me-2"></i>รายงานสถานะรายเดือน
      </a>
      <a href="/planactivity/select" class="btn btn-success btn-lg">
        <i class="bi bi-folder2-open me-2"></i>เพิ่มกิจกรรม (เลือกโครงการ)
      </a>
      <a href="/planactivity/create" class="btn btn-outline-primary btn-lg">
        <i class="bi bi-plus-square me-2"></i>เพิ่มกิจกรรม 1 รายการ
      </a>
    </div>
  </div>

  <div class="card border-0 shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover table-sm mb-0 align-middle">
          <thead class="table-light fw-semibold">
            <tr>
              <th style="width: 70px;">#</th>
              <th style="width: 90px;">ลำดับ</th>
              <th>ชื่อกิจกรรม</th>
              <th style="width: 170px;">สถานะ</th>
              <th style="width: 140px;">รหัสโครงการ</th>
              <th style="width: 140px;">บันทึกโดย</th>
              <th style="width: 120px;">วันที่</th>
              <th style="width: 200px;">การจัดการ</th>
            </tr>
          </thead>
          <tbody>
            <% activities.forEach(a => { %>
              <% const st = Number(a.ac_status); %>
              <tr>
                <td><%= a.ac_id %></td>
                <td><%= a.ac_number %></td>
                <td class="text-truncate" style="max-width: 520px;"><%= a.ac_subject %></td>
                <td>
                  <% if (st === 2) { %>
                    <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>ดำเนินการแล้ว</span>
                  <% } else if (st === 1) { %>
                    <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split me-1"></i>อยู่ระหว่างดำเนินการ</span>
                  <% } else { %>
                    <span class="badge bg-secondary"><i class="bi bi-clock me-1"></i>ยังไม่ดำเนินการ</span>
                  <% } %>
                </td>
                <td><span class="badge bg-info text-dark"><%= a.ac_procode %></span></td>
                <td class="text-muted"><%= a.ac_saveby || '' %></td>
                <td class="text-muted">
                  <% if (a.ac_savedate) { %>
                    <%= a.ac_savedate.toISOString ? a.ac_savedate.toISOString().slice(0,10) : String(a.ac_savedate).slice(0,10) %>
                  <% } %>
                </td>
                <td>
                  <div class="d-flex gap-1 flex-wrap">
                    <a href="/planactivity/<%= a.ac_id %>" class="btn btn-sm btn-outline-secondary"><i class="bi bi-eye me-1"></i>ดู</a>
                    <a href="/planactivity/<%= a.ac_id %>/edit" class="btn btn-sm btn-warning"><i class="bi bi-pencil-square me-1"></i>แก้ไข</a>
                    <form action="/planactivity/<%= a.ac_id %>/delete" method="post" class="d-inline">
                      <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('ลบกิจกรรมนี้?')">
                        <i class="bi bi-trash me-1"></i>ลบ
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="card-footer bg-light text-muted small text-center py-2">
      <i class="bi bi-info-circle me-1"></i>มีทั้งหมด <%= activities.length %> กิจกรรม
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
