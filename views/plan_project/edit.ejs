<%- include('../partials/header') %>

<div class="py-4">
    <div class="mb-4">
      <h1 class="h3 mb-1"><i class="bi bi-pencil-square me-2"></i><%= title %></h1>
      <p class="text-muted">แก้ไขข้อมูลโครงการ</p>
    </div>
    <form action="/planproject/edit/<%= project.pro_id %>" method="post" class="row g-3" novalidate>
      <div class="col-md-4">
        <label class="form-label">รหัสโครงการ</label>
        <input type="text" name="pro_code" class="form-control" value="<%= project.pro_code %>" required>
      </div>
      <div class="col-md-8">
        <label class="form-label">ชื่อโครงการ</label>
        <input type="text" name="pro_subject" class="form-control" value="<%= project.pro_subject %>" required>
      </div>
      <div class="col-md-6">
        <label class="form-label">เป้าหมาย</label>
        <input type="text" name="pro_target" class="form-control" value="<%= project.pro_target %>">
      </div>
      <div class="col-md-3">
        <label class="form-label">งบประมาณ</label>
        <input type="number" step="0.01" name="pro_budget" class="form-control" value="<%= project.pro_budget %>">
      </div>
      <div class="col-md-3">
        <label class="form-label">กลุ่ม</label>
        <input type="text" name="pro_group" class="form-control" value="<%= project.pro_group %>">
      </div>
      <div class="col-md-6">
        <label class="form-label">ผู้รับผิดชอบ</label>
        <input type="text" name="pro_respon" class="form-control" value="<%= project.pro_respon %>">
      </div>
      <div class="col-md-6">
        <label class="form-label">สถานะโครงการ</label>
        <select name="pro_status" class="form-select">
          <option value="0" <%= project.pro_status === 0 ? 'selected' : '' %>>ยังไม่ดำเนินการ</option>
          <option value="1" <%= project.pro_status === 1 ? 'selected' : '' %>>อยู่ระหว่างดำเนินการ</option>
          <option value="2" <%= project.pro_status === 2 ? 'selected' : '' %>>ดำเนินการแล้ว</option>
        </select>
      </div>
      <div class="col-md-6">
        <label class="form-label">แผนงานหลัก</label>
        <select name="pro_macode" class="form-select" required>
          <option value="">-- เลือกแผนงานหลัก --</option>
          <% plans.forEach(plan => { %>
            <option value="<%= plan.ma_code %>" <%= plan.ma_code === project.pro_macode ? 'selected' : '' %>><%= plan.ma_code %> - <%= plan.ma_subject %></option>
          <% }) %>
        </select>
      </div>
<div class="col-12 pt-3">
        <div class="d-flex gap-2">
          <input type="hidden" name="pro_saveby" value="<%= project.pro_saveby %>">
          <button type="submit" class="btn btn-success btn-lg"><i class="bi bi-save me-2"></i>บันทึกการเปลี่ยนแปลง</button>
          <a href="/planproject" class="btn btn-outline-secondary btn-lg"><i class="bi bi-x-circle me-2"></i>ยกเลิก</a>
        </div>
      </div>
    </form>
</div>

<%- include('../partials/footer') %>
