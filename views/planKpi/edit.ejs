<%- include('../partials/header') %>

<div class="py-4">
    <div class="mb-4">
      <h1 class="h3 mb-1"><i class="bi bi-pencil-square me-2"></i>แก้ไขตัวชี้วัดโครงการ</h1>
      <p class="text-muted">แก้ไขข้อมูลตัวชี้วัด</p>
    </div>
    <form action="/plankpi/<%= kpi.kp_id %>/update" method="post" class="row g-3" novalidate>
      <div class="col-md-3">
        <label class="form-label">ลำดับ</label>
        <input type="number" name="kp_number" class="form-control" value="<%= kpi.kp_number %>" required>
      </div>
      <div class="col-md-9">
        <label class="form-label">ชื่อตัวชี้วัด</label>
        <input type="text" name="kp_subject" class="form-control" value="<%= kpi.kp_subject %>" required>
      </div>
      <div class="col-md-4">
        <label class="form-label">ค่าเป้าหมาย</label>
        <input type="number" name="kp_plan" class="form-control" value="<%= kpi.kp_plan %>" required>
      </div>
      <div class="col-md-4">
        <label class="form-label">ผลการดำเนินงาน</label>
        <input type="number" name="kp_action" class="form-control" value="<%= kpi.kp_action %>" required>
      </div>
      <div class="col-md-4">
        <label class="form-label">หน่วย</label>
        <input type="text" name="kp_unit" class="form-control" value="<%= kpi.kp_unit %>" required>
      </div>
      <div class="col-md-6">
        <label class="form-label">รหัสโครงการ</label>
        <select name="kp_procode" class="form-select" required>
          <option value="">-- เลือกโครงการ --</option>
          <% projects.forEach(p => { %>
            <option value="<%= p.pro_code %>" <%= kpi.kp_procode === p.pro_code ? 'selected' : '' %>><%= p.pro_code %> - <%= p.pro_subject %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-6">
        <label class="form-label">วันที่บันทึก</label>
        <input type="date" name="kp_savedate" class="form-control" value="<%= kpi.kp_savedate.toISOString().slice(0,10) %>" required>
      </div>
      <div class="col-12 pt-3">
        <div class="d-flex gap-2">
          <button type="submit" class="btn btn-success btn-lg"><i class="bi bi-save me-2"></i>บันทึกการเปลี่ยนแปลง</button>
          <a href="/plankpi?pro_code=<%= encodeURIComponent(kpi.kp_procode) %>" class="btn btn-outline-secondary btn-lg"><i class="bi bi-x-circle me-2"></i>ยกเลิก</a>
        </div>
      </div>
    </form>
</div>

<%- include('../partials/footer') %>
