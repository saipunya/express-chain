<script>
// Auto-resize embedded previews
window.addEventListener('message', function(e){
  const data = e.data || {};
  if (data.type !== 'resize-embed') return;
  const iframe = document.querySelector('iframe[data-embed-id="'+ data.id +'"]');
  if (!iframe || !data.height) return;
  iframe.style.height = Math.min(Math.max(200, data.height), 1000) + 'px';
});
</script>
