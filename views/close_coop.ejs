<%- include('partials/header.ejs') %>
<section class="py-2 bg-white">
    <div class="container-lg">
      <div class="card mb-4">
        <div class="card-header bg-danger text-white">
          <i class="bi bi-exclamation-circle me-2"></i> สหกรณ์/กลุ่มเกษตรกรที่สถานะ "เลิก" หรือ "ชำระบัญชี"
        </div>
        <div class="card-body">
          <% if (closedCoops && closedCoops.length> 0) { %>
            <div class="row">
              <% closedCoops.forEach((coop, idx)=> { %>
                <div class="col-md-6 mb-2">
                  <div class="list-group">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                      <span>
                        <%= coop.c_name %>
                      </span>
                      <span class="badge bg-danger">
                        <%= coop.c_status %>
                      </span>
                    </div>
                  </div>
                </div>
                <% }) %>
            </div>
            <% } else { %>
              <div class="text-muted">ไม่มีข้อมูลสหกรณ์ที่เลิกหรือเลิก/ชำระบัญชี</div>
              <% } %>
        </div>
      </div>
    </div>
  </section>
<%- include('partials/footer.ejs') %>