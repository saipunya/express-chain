<%- include('../partials/header', { title: 'คำสั่งสำนักงาน' }) %>
<% const hasActions = user && (user.mClass=='pbt' || user.mClass=='admin'); %>

<style>
  .page-header {
    background: linear-gradient(135deg, var(--grad-start, #4f46e5), var(--grad-end, #3b82f6));
    color: white;
    padding: 2rem 0;
    margin-bottom: 2rem;
    border-radius: 0 0 1rem 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  .search-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(226, 232, 240, 0.8);
    border-radius: 1rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
    transform: translateY(-20px);
    margin-bottom: 0.5rem;
  }
  .command-card {
    transition: all 0.2s ease;
    border: 1px solid #f1f5f9;
    border-left: 4px solid #3b82f6;
    background: #fff;
    border-radius: 0.75rem;
  }
  .command-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
  }
  .command-icon {
    width: 48px;
    height: 48px;
    background: #eff6ff;
    color: #3b82f6;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    flex-shrink: 0;
  }
  .badge-custom {
    font-weight: 500;
    letter-spacing: 0.3px;
    padding: 0.4em 0.8em;
    border-radius: 2rem;
  }
  @media (max-width: 576px) {
    .page-header { padding: 1.5rem 0 2.5rem; }
    .command-card { border-left-width: 4px; }
  }
</style>

<!-- Header Section -->
<div class="page-header text-center">
  <div class="container">
    <h1 class="h3 fw-bold mb-1">คำสั่งสำนักงาน</h1>
    <p class="mb-0 opacity-75 small">ระบบบริหารจัดการเอกสารคำสั่ง</p>
  </div>
</div>

<div class="container">
  <!-- Search & Filter -->
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="search-card p-3 p-md-4">
        <form method="GET" action="" class="row g-3">
          <div class="col-12 col-md d-flex gap-2">
            <div class="position-relative flex-grow-1">
              <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
              <input type="text" class="form-control rounded-pill ps-5 py-2 border-0 bg-light" 
                     name="search" placeholder="ค้นหาตามเลขที่ หรือ เรื่อง..." value="<%= search || '' %>">
            </div>
            <button class="btn btn-primary rounded-pill px-4" type="submit">ค้นหา</button>
          </div>
          <div class="col-auto d-flex gap-2">
            <% if(search) { %>
              <a href="/command" class="btn btn-light rounded-pill border" data-bs-toggle="tooltip" title="ล้างค่าค้นหา"><i class="bi bi-x-lg"></i></a>
            <% } %>
            <% if(hasActions){ %>
              <a href="/command/create" class="btn btn-success rounded-pill px-3">
                <i class="bi bi-plus-lg me-1"></i> <span class="d-none d-sm-inline">สร้างใหม่</span>
              </a>
            <% } %>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Stats -->
  <div class="d-flex justify-content-between align-items-center mb-3 px-1">
    <small class="text-muted">
      <i class="bi bi-folder2-open me-1"></i> พบทั้งหมด <span class="fw-bold text-dark"><%= (commands && commands.length) ? commands.length : 0 %></span> รายการ
    </small>
  </div>

  <!-- Command List -->
  <div class="row g-3">
    <% if (commands && commands.length) { %>
      <% commands.forEach(c => { %>
        <div class="col-12 col-lg-6">
          <div class="command-card p-3 h-100 position-relative">
            <div class="d-flex align-items-start gap-3">
              <!-- Icon/Date Box -->
              <div class="d-flex flex-column align-items-center gap-1">
                <div class="command-icon">
                  <i class="bi bi-megaphone"></i>
                </div>
                <% const thaiDate = new Date(c.com_date).toLocaleDateString('th-TH', { year: '2-digit', month: 'short', day: 'numeric' }); %>
                <span class="badge bg-light text-dark border badge-custom mt-2 w-100 text-center" style="font-size: 0.7rem;">
                  <%= thaiDate %>
                </span>
              </div>

              <!-- Content -->
              <div class="flex-grow-1 min-w-0">
                <div class="d-flex justify-content-between align-items-start mb-1">
                  <span class="badge bg-primary bg-opacity-10 text-primary badge-custom mb-1">
                    เลขที่ <%= c.com_no %>
                  </span>
                  <% if(hasActions){ %>
                    <div class="dropdown">
                      <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                      </button>
                      <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                        <li><a class="dropdown-item" href="/command/edit/<%= c.command_id %>"><i class="bi bi-pencil me-2 text-warning"></i>แก้ไข</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                          <form action="/command/delete/<%= c.command_id %>" method="POST" onsubmit="return confirm('ยืนยันลบ?')">
                            <button class="dropdown-item text-danger" type="submit"><i class="bi bi-trash me-2"></i>ลบ</button>
                          </form>
                        </li>
                      </ul>
                    </div>
                  <% } %>
                </div>
                
                <h5 class="fw-bold text-dark mb-2 text-wrap" style="font-size: 1rem; line-height: 1.5;">
                  <%= c.com_story %>
                </h5>

                <div class="mt-3">
                  <% if (user) { %>
                    <a href="/command/download/<%= c.command_id %>" class="btn btn-sm btn-outline-primary rounded-pill px-3" target="_blank">
                      <i class="bi bi-file-earmark-pdf-fill me-1"></i> เปิดอ่านคำสั่ง
                    </a>
                  <% } else { %>
                    <a href="/auth/login" class="btn btn-sm btn-light rounded-pill text-muted border px-3">
                      <i class="bi bi-lock-fill me-1"></i> เข้าสู่ระบบ
                    </a>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <div class="text-center py-5 bg-white rounded-3 border border-dashed">
          <div class="mb-3 text-muted opacity-50">
            <i class="bi bi-inbox fs-1"></i>
          </div>
          <h5 class="text-muted">ไม่พบข้อมูลคำสั่ง</h5>
          <p class="small text-muted mb-0">ลองเปลี่ยนคำค้นหา หรือเพิ่มรายการใหม่</p>
        </div>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>