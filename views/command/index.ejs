<%- include('../partials/header', { title: 'Commands' }) %>
<% const hasActions = user && (user.mClass=='pbt' || user.mClass=='admin'); %>

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-3">
  <div class="d-flex align-items-center gap-2">
    <h3 class="mb-0">คำสั่งสำนักงาน</h3>
    <span class="badge bg-secondary text-light">พบ <%= (commands && commands.length) ? commands.length : 0 %> รายการ</span>
  </div>
  <div class="d-flex align-items-center gap-2">
    <form class="d-flex" method="GET" action="">
      <div class="input-group">
        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
        <input type="text" class="form-control" name="search" placeholder="ค้นหาเรื่อง/จาก" value="<%= search || '' %>">
        <button class="btn btn-primary" type="submit">ค้นหา</button>
        <a href="/command" class="btn btn-outline-secondary">ล้าง</a>
      </div>
    </form>
    <% if(user && (user.mClass=='admin' || user.mClass=='pbt')){ %>
      <a href="/command/create" class="btn btn-success"><i class="bi bi-plus-lg me-1"></i> เพิ่ม</a>
    <% } %>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-bordered table-striped table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th style="width: 100px;">เลขที่</th>
            <th style="width: 180px;">วันที่</th>
            <th>เรื่อง</th>
            <th style="width: 110px;">ไฟล์</th>
            <% if(hasActions){ %>
              <th style="width: 160px;">การจัดการ</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% if (commands && commands.length) { %>
            <% commands.forEach(c => { %>
              <tr>
                <td class="fw-semibold"><%= c.com_no %></td>
                <td class="text-nowrap text-muted">
                  <i class="bi bi-calendar-event me-1"></i>
                  <% const thaiDate = new Date(c.com_date).toLocaleDateString('th-TH', { year: 'numeric', month: 'long', day: 'numeric' }); %>
                  <%= thaiDate %>
                </td>
                <td class="text-truncate" style="max-width: 520px;" data-bs-toggle="tooltip" data-bs-placement="top" title="<%= c.com_story %>">
                  <%= c.com_story %>
                </td>
                <td>
                  <% if (user) { %>
                    <a href="/command/download/<%= c.command_id %>" class="btn btn-sm btn-outline-primary" target="_blank" data-bs-toggle="tooltip" title="เปิดไฟล์ PDF">
                      <i class="bi bi-file-pdf-fill me-1"></i> เปิด
                    </a>
                  <% } else { %>
                    <a href="/auth/login" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="เข้าสู่ระบบเพื่อดาวน์โหลด">
                      <i class="bi bi-box-arrow-in-right me-1"></i> เข้าสู่ระบบ
                    </a>
                  <% } %>
                </td>
                <% if(hasActions){ %>
                <td class="text-nowrap">
                  <a href="/command/edit/<%= c.command_id %>" class="btn btn-warning btn-sm me-1" data-bs-toggle="tooltip" title="แก้ไข">
                    <i class="bi bi-pencil-square"></i>
                  </a>
                  <form action="/command/delete/<%= c.command_id %>" method="POST" style="display:inline" onsubmit="return confirm('ต้องการลบรายการนี้หรือไม่?')">
                    <button class="btn btn-danger btn-sm" type="submit" data-bs-toggle="tooltip" title="ลบ">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </td>
                <% } %>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="<%= hasActions ? 5 : 4 %>">
                <div class="text-center py-4 text-muted">
                  <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                  ไม่พบรายการที่ค้นหา
                </div>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>