<%- include('partials/header') %>

<div class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="h3 mb-1"><i class="bi bi-clipboard-check me-2"></i><%= title %></h1>
        <p class="text-muted small mb-0">จัดการแผนงาน โครงการ ตัวชี้วัด และกิจกรรมต่างๆ</p>
      </div>
      <div class="btn-group" role="group" role="group">
        <a href="/planmain/new" class="btn btn-success"><i class="bi bi-plus-circle me-1"></i>แผนงานหลัก</a>
        <a href="/planproject/new" class="btn btn-outline-success"><i class="bi bi-folder-plus me-1"></i>โครงการ</a>
        <a href="/plankpi/create" class="btn btn-outline-success"><i class="bi bi-graph-up me-1"></i>ตัวชี้วัด</a>
        <a href="/planactivity/select" class="btn btn-outline-success"><i class="bi bi-list-task me-1"></i>กิจกรรม</a>
        <a href="/planactivity/report" class="btn btn-outline-info"><i class="bi bi-clipboard-data me-1"></i>รายงานสถานะรายเดือน</a>
      </div>
    </div>

    <div class="card border-0 shadow-sm">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover table-sm mb-0">
        <thead class="table-light">
          <tr>
            <th scope="col">#</th>
            <th scope="col">รหัส</th>
            <th scope="col">หัวข้อ</th>
            <th scope="col">บันทึกโดย</th>
            <th scope="col">วันที่</th>
            <th scope="col">การจัดการ</th>
          </tr>
        </thead>
        <tbody>
          <% plans.forEach(p => { %>
            <tr>
              <td><%= p.ma_id %></td>
              <td><%= p.ma_code %></td>
              <td><%= p.ma_subject %></td>
              <td><%= p.ma_saveby %></td>
              <td><%= thaiDate(p.ma_savedate) %></td>
              <td>
                <!-- submit POST with hidden _method so method-override turns it into DELETE -->
                <form action="/planmain/api/<%= p.ma_id %>" method="post" class="d-inline">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('ลบรายการ?')">ลบ</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
          </table>
        </div>
      </div>
      <div class="card-footer bg-light text-muted small text-center py-2">
        <i class="bi bi-info-circle me-1"></i>มีทั้งหมด <%= plans.length %> แผนงานหลัก
      </div>
    </div>
</div>

<%- include('partials/footer') %>
