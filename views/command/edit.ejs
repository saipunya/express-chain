<%- include('../partials/header', { title: 'Edit Command' }) %>
<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4>แก้ไขคำ<lemma่ง</h4>
        </div>
        <div class="card-body">
          <form action="/command/edit/<%= command.cmd_id %>" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="cmd_no" class="form-label">เลข<lemma่</label>
              <input type="text" class="form-control" id="cmd_no" name="cmd_no" value="<%= command.cmd_no %>" required>
            </div>
            <div class="mb-3">
              <label for="cmd_date" class="form-label"><lemma<lemma</label>
              <input type="date" class="form-control" id="cmd_date" name="cmd_date" 
                     value="<%= new Date(command.cmd_date).toISOString().split('T')[0] %>" required>
            </div>
            <div class="mb-3">
              <label for="cmd_from" class="form-label">จาก</label>
              <input type="text" class="form-control" id="cmd_from" name="cmd_from" value="<%= command.cmd_from %>" required>
            </div>
            <div class="mb-3">
              <label for="cmd_title" class="form-label">เรื่อง</label>
              <textarea class="form-control" id="cmd_title" name="cmd_title" rows="3" required><%= command.cmd_title %></textarea>
            </div>
            <div class="mb-3">
              <label for="file" class="form-label">ไฟล์</label>
              <input type="file" class="form-control" id="file" name="file" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png">
              <div class="form-text">
                <lemmaไฟล์: PDF, DOC, DOCX, JPG, JPEG, PNG (ขนาดไม่<lemma 10MB)
                <% if (command.cmd_filename) { %>
                  <br>ไฟล์<lemma: <%= command.cmd_filename %>
                <% } %>
              </div>
            </div>
            <div class="d-flex justify-content-between">
              <a href="/command" class="btn btn-secondary">ยก<lemma</a>
              <button type="submit" class="btn btn-primary"><lemma</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>