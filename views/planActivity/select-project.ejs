<%- include('../partials/header') %>

<div class="py-4">
  <div class="mb-4">
    <h1 class="h3 mb-1"><i class="bi bi-folder2-open me-2"></i>เลือกโครงการเพื่อเพิ่มกิจกรรม</h1>
    <p class="text-muted">เลือกโครงการที่ต้องการเพิ่มกิจกรรม เพื่อดำเนินการต่อ</p>
  </div>

  <% const list = Array.isArray(plans) ? plans : []; %>

  <% if (!list.length) { %>
    <div class="alert alert-info d-flex align-items-center" role="alert">
      <i class="bi bi-info-circle me-2 fs-5"></i>
      <div>
        <strong>ไม่มีโครงการ</strong><br>
        <small>กรุณาเพิ่มโครงการก่อนจึงจะสามารถเพิ่มกิจกรรมได้</small>
      </div>
    </div>
    <div class="mt-3">
      <a href="/planproject/new" class="btn btn-primary"><i class="bi bi-plus-circle me-2"></i>เพิ่มโครงการใหม่</a>
    </div>
  <% } else { %>
    <% list.forEach((plan, pIdx) => { %>
      <div class="mb-4">
        <div class="d-flex align-items-center mb-2">
          <span class="badge bg-primary-subtle text-primary me-2">แผนงาน</span>
          <h2 class="h6 mb-0"><%= plan.plan_name || '-' %> (<%= plan.ma_code %>)</h2>
        </div>
        <div class="row g-3">
          <% (plan.projects || []).forEach((project) => { %>
            <div class="col-md-6 col-lg-4">
              <div class="card border-0 shadow-sm h-100 hover-shadow transition" style="cursor: pointer;" onclick="window.location.href='/planactivity/create-many?pro_code=<%= project.pro_code %>'">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                      <h5 class="card-title mb-1"><%= project.pro_subject || '-' %></h5>
                      <span class="badge bg-info text-dark"><%= project.pro_code %></span>
                    </div>
                    <i class="bi bi-arrow-right text-muted fs-5"></i>
                  </div>
                  <div class="small text-muted mb-2">
                    <i class="bi bi-stack me-1"></i>เพิ่มกิจกรรมหลายรายการ
                  </div>
                  <div class="d-flex justify-content-between align-items-center text-muted small">
                    <span><i class="bi bi-person me-1"></i><%= project.pro_respon || '-' %></span>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
        <% if (pIdx < list.length - 1) { %><hr><% } %>
      </div>
    <% }) %>
  <% } %>

  <div class="mt-4">
    <a href="/planactivity" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-2"></i>กลับไปหน้ากิจกรรม</a>
  </div>
</div>

<style>
  .hover-shadow {
    transition: all 0.3s ease;
  }
  .card:hover {
    box-shadow: 0 12px 24px rgba(0,0,0,0.15) !important;
    transform: translateY(-4px);
  }
</style>

<%- include('../partials/footer') %>
