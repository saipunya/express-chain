                    <th style="width:100px">ปี</th>
                    <th>ชื่อ</th>
                    <th>วันที่อนุมัติ</th>
                    <th class="text-center" style="width:80px">ไฟล์</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.rabiab.forEach(r => { %>
                    <tr>
                      <td class="fw-medium" data-label="ปี"><%= r.ra_year || '-' %></td>
