<%- include('../partials/header') %>

<%
  const kpiList = Array.isArray(typeof kpiMetrics !== 'undefined' ? kpiMetrics : []) ? (kpiMetrics || []) : [];
  const hasProject = Boolean(selectedProject);
  const monthInput = (selectedMonth || '').slice(0, 7);
  const monthDisplay = (typeof monthLabel !== 'undefined' && monthLabel) ? monthLabel : monthInput;
  const hasActivities = Array.isArray(activities) && activities.length > 0;
  const hasKpis = kpiList.length > 0;
  const isoMonthValue = monthInput || new Date().toISOString().slice(0, 7);
  let selectedGregorianYear = Number.parseInt(isoMonthValue.slice(0, 4), 10);
  let selectedMonthNumber = Number.parseInt(isoMonthValue.slice(5, 7), 10);
  if (Number.isNaN(selectedGregorianYear)) selectedGregorianYear = new Date().getFullYear();
  if (Number.isNaN(selectedMonthNumber)) new Date().getMonth() + 1;
  const monthOptions = [
    { value: 1, label: 'มกราคม' }, { value: 2, label: 'กุมภาพันธ์' }, { value: 3, label: 'มีนาคม' },
    { value: 4, label: 'เมษายน' }, { value: 5, label: 'พฤษภาคม' }, { value: 6, label: 'มิถุนายน' },
    { value: 7, label: 'กรกฎาคม' }, { value: 8, label: 'สิงหาคม' }, { value: 9, label: 'กันยายน' },
    { value: 10, label: 'ตุลาคม' }, { value: 11, label: 'พฤศจิกายน' }, { value: 12, label: 'ธันวาคม' }
  ];
  const thaiYearOptions = [];
  for (let diff = -2; diff <= 2; diff += 1) thaiYearOptions.push(selectedGregorianYear + diff);
  const safeAttachments = Array.isArray(typeof attachments !== 'undefined' ? attachments : []) ? (attachments || []) : [];
  const attachmentErrorMessage = typeof attachmentUploadError === 'string' ? attachmentUploadError : null;
%>

<div class="py-4">

  <!-- ═══════════════════ Page Header ═══════════════════ -->
  <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
    <div>
      <h1 class="h3 mb-1"><i class="bi bi-calendar2-check me-2"></i>รายงานสถานะกิจกรรมรายเดือน</h1>
      <p class="text-muted small mb-0">เลือกโครงการและเดือนที่ต้องการสรุปรายงาน พร้อมกำหนดสถานะกิจกรรมย่อย</p>
    </div>
    <div class="d-flex gap-2">
      <a href="/plan" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-left me-1"></i>หน้าหลัก</a>
      <a href="/planproject/activities-overview" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-left me-1"></i>ภาพรวมโครงการ</a>
    </div>
  </div>

  <!-- ═══════════════════ Filter Form ═══════════════════ -->
  <form id="monthly-filter-form" class="card border-0 shadow-sm mb-4" method="get" action="/planactivity/report">
    <div class="card-body">
      <div class="row g-3 align-items-end">
        <div class="col-md-6">
          <label for="pro_code" class="form-label fw-semibold">เลือกโครงการ</label>
          <select class="form-select" id="pro_code" name="pro_code" required>
            <option value="">-- เลือกโครงการ --</option>
            <% projects.forEach(project => { %>
              <option value="<%= project.pro_code %>" <%= project.pro_code === selectedProject ? 'selected' : '' %>><%= project.pro_subject || '' %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-3">
          <label for="month-select" class="form-label fw-semibold">เดือนที่รายงาน</label>
          <input type="hidden" id="month-hidden" name="month" value="<%= isoMonthValue %>">
          <div class="row g-2">
            <div class="col-6">
              <select class="form-select" id="month-select" aria-label="เลือกเดือน" required>
                <% monthOptions.forEach((option) => { %>
                  <option value="<%= option.value %>" <%= option.value === selectedMonthNumber ? 'selected' : '' %>><%= option.label %></option>
                <% }) %>
              </select>
            </div>
            <div class="col-6">
              <select class="form-select" id="year-select" aria-label="เลือกปี พ.ศ." required>
                <% thaiYearOptions.forEach((year) => { const thaiYear = year + 543; %>
                  <option value="<%= thaiYear %>" <%= year === selectedGregorianYear ? 'selected' : '' %>><%= thaiYear %></option>
                <% }) %>
              </select>
            </div>
          </div>
        </div>
        <div class="col-md-3 d-grid">
          <button type="submit" class="btn btn-primary"><i class="bi bi-search me-2"></i>แสดงรายการ</button>
        </div>
      </div>
    </div>
  </form>

  <% if (!hasProject) { %>
    <div class="alert alert-info shadow-sm"><i class="bi bi-info-circle me-2"></i>กรุณาเลือกโครงการเพื่อเริ่มบันทึกสถานะรายเดือน</div>
  <% } else if (!hasActivities) { %>
    <div class="alert alert-warning shadow-sm"><i class="bi bi-exclamation-triangle me-2"></i>โครงการนี้ยังไม่มีกิจกรรมย่อย กรุณาเพิ่มกิจกรรมก่อน</div>
  <% } else { %>

    <%
      const totalActivitiesCount = Number(totalActivities) || 0;
      const completedCount = Number(summary.completed || 0);
      const inProgressCount = Number(summary.inProgress || 0);
      const pendingCount = Number(summary.notStarted || 0) + Number(summary.pending || 0);
      const completionPercent = totalActivitiesCount ? (completedCount / totalActivitiesCount) * 100 : 0;
      const inProgressPercent = totalActivitiesCount ? (inProgressCount / totalActivitiesCount) * 100 : 0;
      const pendingPercent = totalActivitiesCount ? (pendingCount / totalActivitiesCount) * 100 : 0;
      const statusBadge = completionPercent >= 80 ? 'success' : completionPercent >= 50 ? 'info' : 'warning';
      const completionBarWidth = Math.min(completionPercent, 100).toFixed(1);
    %>

    <!-- ═══════════════════ Summary Cards ═══════════════════ -->
    <div class="row g-3 mb-4">
      <div class="col-lg-4">
        <div class="card shadow-sm h-100 border-<%= statusBadge %>">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <div>
                <p class="text-uppercase text-muted small mb-1">ภาพรวมความก้าวหน้า</p>
                <h3 class="mb-0"><%= completionPercent.toFixed(1) %>%</h3>
              </div>
              <span class="badge bg-<%= statusBadge %>">
                <%= completionPercent >= 80 ? 'สำเร็จดี' : completionPercent >= 50 ? 'กำลังเดินหน้า' : 'ต้องเร่งรัด' %>
              </span>
            </div>
            <div class="progress" style="height: 16px;">
              <div class="progress-bar bg-<%= statusBadge %>" role="progressbar" style="width: <%= completionBarWidth %>%;" aria-valuenow="<%= completionBarWidth %>" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <small class="text-muted d-block mt-2">จากกิจกรรมทั้งหมด <strong><%= totalActivitiesCount %></strong> รายการ</small>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="row g-3">
          <div class="col-md-4">
            <div class="card shadow-sm h-100 border-success-subtle">
              <div class="card-body text-center">
                <p class="text-uppercase text-muted small mb-1"><i class="bi bi-check-circle text-success me-1"></i>เรียบร้อย</p>
                <h4 class="text-success mb-0"><%= completedCount %></h4>
                <small class="text-muted"><%= completionPercent.toFixed(1) %>%</small>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card shadow-sm h-100 border-warning-subtle">
              <div class="card-body text-center">
                <p class="text-uppercase text-muted small mb-1"><i class="bi bi-hourglass-split text-warning me-1"></i>กำลังดำเนินการ</p>
                <h4 class="text-warning mb-0"><%= inProgressCount %></h4>
                <small class="text-muted"><%= inProgressPercent.toFixed(1) %>%</small>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card shadow-sm h-100 border-secondary-subtle">
              <div class="card-body text-center">
                <p class="text-uppercase text-muted small mb-1"><i class="bi bi-clock text-secondary me-1"></i>ยังไม่ดำเนินการ</p>
                <h4 class="text-muted mb-0"><%= pendingCount %></h4>
                <small class="text-muted"><%= pendingPercent.toFixed(1) %>%</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- ═══════════════════ UNIFIED FORM: Activities + KPI ═══════════════════ -->
    <form id="unified-save-form" action="/planactivity/report/all" method="post">
      <input type="hidden" name="pro_code" value="<%= selectedProject %>">
      <input type="hidden" name="report_month" value="<%= monthInput %>">

      <!-- ── Section 1: Activity Statuses ── -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-light">
          <h2 class="h5 mb-0"><i class="bi bi-list-check me-2"></i>สถานะกิจกรรม</h2>
          <p class="text-muted small mb-0">เดือน <span class="fw-semibold"><%= monthDisplay %></span></p>
        </div>
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th style="width: 60px;">#</th>
                <th style="width: 80px;">ลำดับ</th>
                <th>ชื่อกิจกรรม</th>
                <th style="width: 360px;">สถานะรอบเดือนนี้</th>
                <th style="width: 220px;">หมายเหตุ</th>
              </tr>
            </thead>
            <tbody></tbody>
              <% activities.forEach((activity, idx) => {
                const monthlyRecord = statusesMap[activity.ac_id];
                const currentStatusRaw = typeof monthlyRecord?.status !== 'undefined' ? monthlyRecord.status : activity.ac_status;
                const currentStatus = Number.isFinite(Number(currentStatusRaw)) ? Number(currentStatusRaw) : 0;
                const currentNote = monthlyRecord?.note || '';
              %>
                <tr>
                  <td class="text-muted small"><%= idx + 1 %></td>
                  <td><span class="badge bg-light text-dark"><%= activity.ac_number %></span></td>
                  <td><%= activity.ac_subject %></td>
                  <td>
                    <div class="btn-group btn-group-sm" role="group">
                      <% statusOptions.forEach((opt, i) => { %>
                        <input type="radio" class="btn-check" name="status_<%= activity.ac_id %>" id="status-<%= activity.ac_id %>-<%= opt.value %>" value="<%= opt.value %>" <%= currentStatus === opt.value ? 'checked' : '' %> <%= i === 0 ? 'required' : '' %>>
                        <label class="btn btn-outline-<%= opt.value === 2 ? 'success' : opt.value === 1 ? 'warning' : 'secondary' %>" for="status-<%= activity.ac_id %>-<%= opt.value %>">
                          <i class="bi bi-<%= opt.icon %> me-1"></i><%= opt.label %>
                        </label>
                      <% }) %>
                    </div>
                  </td>
                  <td>
                    <input type="text" class="form-control form-control-sm" name="note_<%= activity.ac_id %>" value="<%= currentNote %>" placeholder="หมายเหตุ">
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- ── Section 2: KPI Metrics ── -->
      <% if (hasKpis) { %>
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <div>
              <h2 class="h5 mb-0"><i class="bi bi-graph-up me-2"></i>ผลตามตัวชี้วัด</h2>
              <p class="text-muted small mb-0">เดือน <span class="fw-semibold"><%= monthDisplay %></span></p>
            </div>
            <span class="badge bg-primary"><%= kpiSummary.total %> ตัวชี้วัด</span>
          </div>

          <!-- KPI summary mini cards -->
          <div class="card-body border-bottom">
            <div class="row g-2 text-center">
              <div class="col-3">
                <div class="p-2 rounded bg-success bg-opacity-10">
                  <div class="fw-bold text-success fs-5"><%= kpiSummary.achieved %></div>
                  <small class="text-muted">บรรลุเป้า</small>
                </div>
              </div>
              <div class="col-3">
                <div class="p-2 rounded bg-warning bg-opacity-10">
                  <div class="fw-bold text-warning fs-5"><%= kpiSummary.onTrack %></div>
                  <small class="text-muted">แนวโน้มดี ≥70%</small>
                </div>
              </div>
              <div class="col-3">
                <div class="p-2 rounded bg-danger bg-opacity-10">
                  <div class="fw-bold text-danger fs-5"><%= kpiSummary.behind %></div>
                  <small class="text-muted">ต่ำกว่าเป้า</small>
                </div>
              </div>
              <div class="col-3">
                <div class="p-2 rounded bg-secondary bg-opacity-10">
                  <div class="fw-bold text-muted fs-5"><%= kpiSummary.noTarget %></div>
                  <small class="text-muted">ไม่มีเป้า</small>
                </div>
              </div>
            </div>
          </div>

          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th style="width: 50px;">#</th>
                  <th>ตัวชี้วัด</th>
                  <th style="width: 120px;">เป้าหมาย</th>
                  <th style="width: 130px;">ผลสะสม</th>
                  <th style="width: 110px;">% เทียบเป้า</th>
                  <th style="width: 150px;">ผลเดือนนี้</th>
                  <th style="width: 200px;">หมายเหตุ</th>
                </tr>
              </thead>
              <tbody>
                <% kpiList.forEach((kpi, index) => {
                  const percent = kpi.achievement_percent;
                  const monthlyRecord = kpi.monthly_record;
                  const cumulative = Number(kpi.cumulative_total || 0);
                  const targetValue = Number(kpi.kp_plan || 0);
                  const barWidth = percent !== null ? Math.min(percent, 100).toFixed(1) : 0;
                  const barColor = percent === null ? 'secondary' : percent >= 100 ? 'success' : percent >= 70 ? 'warning' : 'danger';
                %>
                  <tr>
                    <td>
                      <span class="badge bg-light text-dark"><%= index + 1 %></span>
                      <input type="hidden" name="kpi_rows[<%= index %>][kp_id]" value="<%= kpi.kp_id %>">
                    </td>
                    <td>
                      <div class="fw-semibold"><%= kpi.kp_subject %></div>
                      <small class="text-muted">หน่วย: <%= kpi.kp_unit %></small>
                    </td>
                    <td class="fw-semibold"><%= targetValue.toLocaleString('th-TH') %></td>
                    <td>
                      <span class="fw-semibold text-primary"><%= cumulative.toLocaleString('th-TH', { maximumFractionDigits: 2 }) %></span>
                    </td>
                    <td>
                      <% if (percent === null) { %>
                        <span class="text-muted">—</span>
                      <% } else { %>
                        <div class="d-flex align-items-center gap-2">
                          <div class="progress flex-grow-1" style="height: 8px;"></div>
                            <div class="progress-bar bg-<%= barColor %>" style="width: <%= barWidth %>%;"></div>
                          </div>
                          <span class="fw-semibold text-<%= barColor %> small"><%= percent.toFixed(1) %>%</span>
                        </div>
                      <% } %>
                    </td>
                    <td>
                      <input type="number" step="0.01" min="0" class="form-control form-control-sm" name="kpi_rows[<%= index %>][actual_value]" value="<%= monthlyRecord ? Number(monthlyRecord.actual_value).toString() : '' %>" placeholder="0.00">
                    </td>
                    <td>
                      <input type="text" class="form-control form-control-sm" name="kpi_rows[<%= index %>][note]" value="<%= monthlyRecord && monthlyRecord.note ? monthlyRecord.note : '' %>" placeholder="หมายเหตุ">
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      <% } else { %>
        <div class="alert alert-secondary shadow-sm mb-4"><i class="bi bi-bar-chart me-2"></i>โครงการนี้ยังไม่มีตัวชี้วัด</div>
      <% } %>

      <!-- ── Unified Save Button (sticky bottom) ── -->
      <div class="sticky-bottom-bar bg-white border-top shadow-lg py-3 px-4">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <span class="text-muted small"><i class="bi bi-info-circle me-1"></i>บันทึกสถานะกิจกรรม<%= hasKpis ? 'และผลตัวชี้วัด' : '' %>พร้อมกัน — เดือน <strong><%= monthDisplay %></strong></span>
          </div>
          <button type="submit" class="btn btn-success btn-lg px-5">
            <i class="bi bi-save me-2"></i>บันทึกทั้งหมด
          </button>
        </div>
      </div>

    </form>

    <!-- ═══════════════════ Attachments (separate form) ═══════════════════ -->
    <div class="card border-0 shadow-sm mt-4">
      <div class="card-header bg-light">
        <h2 class="h5 mb-0"><i class="bi bi-paperclip me-2"></i>เอกสารแนบรายงาน</h2>
        <p class="text-muted small mb-0">แนบไฟล์ PDF/Word/Excel หรือรูปภาพประกอบรายงานเดือนนี้</p>
      </div>
      <div class="card-body">
        <% if (attachmentErrorMessage) { %>
          <div class="alert alert-warning small mb-3"><%= attachmentErrorMessage %></div>
        <% } %>
        <% if (!safeAttachments.length) { %>
          <div class="alert alert-light border text-center mb-3"><i class="bi bi-folder2-open me-2"></i>ยังไม่มีเอกสารแนบสำหรับเดือนนี้</div>
        <% } else { %>
          <div class="list-group attachments-list mb-3">
            <% safeAttachments.forEach((file) => {
              const fileUrl = '/uploads/' + file.relative_path;
              const fileSize = Number(file.size || 0).toLocaleString('th-TH');
              const uploadedAt = new Date(file.uploaded_at);
            %>
              <div class="list-group-item rounded-3 shadow-sm px-3 py-3 mb-2 d-flex flex-column flex-md-row justify-content-between gap-3">
                <div class="flex-grow-1">
                  <a href="<%= fileUrl %>" target="_blank" class="fw-semibold text-decoration-none">
                    <i class="bi bi-file-earmark-text me-2"></i><%= file.original_name %>
                  </a>
                  <div class="text-muted small mt-1">
                    <i class="bi bi-person me-1"></i><%= file.uploaded_by || 'ระบบ' %>
                    &nbsp;|&nbsp;
                    <i class="bi bi-calendar me-1"></i><%= uploadedAt.toLocaleDateString('th-TH', { year: 'numeric', month: 'long', day: 'numeric' }) %> เวลา <%= uploadedAt.toLocaleTimeString('th-TH', { hour: '2-digit', minute: '2-digit' }) %>
                    &nbsp;|&nbsp;
                    <i class="bi bi-hdd me-1"></i><%= fileSize %> ไบต์
                  </div>
                </div>
                <form class="d-inline-flex align-items-center" method="post" action="/planactivity/report/attachments/<%= file.id %>?pro_code=<%= encodeURIComponent(selectedProject) %>&month=<%= encodeURIComponent(isoMonthValue) %>&report_month=<%= encodeURIComponent(monthInput) %>">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill" onclick="return confirm('ต้องการลบเอกสารนี้?')">
                    <i class="bi bi-trash me-1"></i>ลบ
                  </button>
                </form>
              </div>
            <% }) %>
          </div>
        <% } %>

        <form class="row g-3" action="/planactivity/report/attachments/upload?pro_code=<%= encodeURIComponent(selectedProject) %>&month=<%= encodeURIComponent(isoMonthValue) %>&report_month=<%= encodeURIComponent(monthInput) %>" method="post" enctype="multipart/form-data">
          <div class="col-md-8">
            <input class="form-control" type="file" id="attachment-file" name="attachment" required>
          </div>
          <div class="col-md-4 d-grid">
            <button type="submit" class="btn btn-outline-primary"><i class="bi bi-upload me-2"></i>อัปโหลดเอกสาร</button>
          </div>
          <div class="col-12">
            <p class="text-muted small mb-0">รองรับ PDF, Word, Excel, JPG, PNG ขนาดไม่เกิน 20MB</p>
          </div>
        </form>
      </div>
    </div>

    <!-- ═══════════════════ Historical Records (Activity) ═══════════════════ -->
    <div class="card border-0 shadow-sm mt-4">
      <div class="card-header bg-light">
        <h2 class="h5 mb-0"><i class="bi bi-clock-history me-2"></i>ประวัติการบันทึกกิจกรรมรายเดือน</h2>
        <p class="text-muted small mb-0">ย้อนหลัง 12 เดือน</p>
      </div>
      <% if (!Array.isArray(historicalRecords) || historicalRecords.length === 0) { %>
        <div class="card-body">
          <div class="alert alert-light border text-center mb-0"><i class="bi bi-inbox me-2"></i>ยังไม่มีข้อมูลการบันทึกรายเดือนที่ผ่านมา</div>
        </div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th style="width: 160px;">เดือน-ปี</th>
                <th style="width: 90px;">ทั้งหมด</th>
                <th style="width: 100px;"><span class="text-success">เรียบร้อย</span></th>
                <th style="width: 100px;"><span class="text-warning">กำลังดำเนิน</span></th>
                <th style="width: 100px;"><span class="text-secondary">ยังไม่เริ่ม</span></th>
                <th>อัตราสำเร็จ</th>
              </tr>
            </thead>
            <tbody>
              <% historicalRecords.forEach((record) => {
                const completed = Number(record.completed || 0);
                const inProgress = Number(record.in_progress || 0);
                const notStarted = Number(record.not_started || 0);
                const total = Number(record.total_activities || 1);
                const successRate = ((completed / total) * 100).toFixed(1);
                const [year, month] = (record.report_month || '').split('-');
                const gregorianYear = Number.parseInt(year, 10);
                const monthNum = Number.parseInt(month, 10);
                const thaiYear = gregorianYear + 543;
                const monthNames = ['มกราคม','กุมภาพันธ์','มีนาคม','เมษายน','พฤษภาคม','มิถุนายน','กรกฎาคม','สิงหาคม','กันยายน','ตุลาคม','พฤศจิกายน','ธันวาคม'];
                const mLabel = monthNames[monthNum - 1] || '-';
                const rateColor = successRate >= 80 ? 'success' : successRate >= 60 ? 'info' : 'warning';
              %>
                <tr>
                  <td>
                    <strong><%= mLabel %> <%= thaiYear %></strong>
                    <br><small class="text-muted"><%= record.report_month %></small>
                  </td>
                  <td><span class="badge bg-light text-dark"><%= total %></span></td>
                  <td><span class="badge bg-success"><%= completed %></span></td>
                  <td><span class="badge bg-warning text-dark"><%= inProgress %></span></td>
                  <td><span class="badge bg-secondary"><%= notStarted %></span></td>
                  <td>
                    <div class="d-flex align-items-center gap-2">
                      <div class="progress flex-grow-1" style="height: 20px;">
                        <div class="progress-bar bg-<%= rateColor %>" role="progressbar" style="width: <%= Math.min(successRate, 100) %>%;">
                          <%= successRate %>%
                        </div>
                      </div>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <div class="card-footer bg-light text-muted small">
          <i class="bi bi-info-circle me-1"></i>แสดงข้อมูลล่าสุด 12 เดือน เรียงจากเดือนล่าสุด
        </div>
      <% } %>
    </div>

    <!-- ═══════════════════ Historical Records (KPI) ═══════════════════ -->
    <% if (hasKpis) { %>
      <div class="card border-0 shadow-sm mt-4">
        <div class="card-header bg-light">
          <h2 class="h5 mb-0"><i class="bi bi-graph-up me-2"></i>ประวัติการบันทึกตัวชี้วัดรายเดือน</h2>
          <p class="text-muted small mb-0">ย้อนหลัง 12 เดือน</p>
        </div>
        <% if (!Array.isArray(kpiHistoricalRecords) || kpiHistoricalRecords.length === 0) { %>
          <div class="card-body">
            <div class="alert alert-light border text-center mb-0"><i class="bi bi-inbox me-2"></i>ยังไม่มีข้อมูลการบันทึกตัวชี้วัดรายเดือนที่ผ่านมา</div>
          </div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th style="width: 160px;">เดือน-ปี</th>
                  <th style="width: 90px;">ตัวชี้วัด</th>
                  <th style="width: 100px;"><span class="text-success">บรรลุเป้า</span></th>
                  <th style="width: 100px;"><span class="text-warning">แนวโน้มดี ≥70%</span></th>
                  <th style="width: 100px;"><span class="text-danger">ต่ำกว่าเป้า</span></th>
                  <th style="width: 100px;"><span class="text-secondary">ไม่มีเป้า</span></th>
                  <th>เฉลี่ยความสำเร็จ</th>
                </tr>
              </thead>
              <tbody>
                <% kpiHistoricalRecords.forEach((record) => {
                  const achieved = Number(record.achieved || 0);
                  const onTrack = Number(record.on_track || 0);
                  const behind = Number(record.behind || 0);
                  const noTarget = Number(record.no_target || 0);
                  const total = Number(record.total_kpis || 1);
                  const avgPercent = Number(record.avg_achievement_percent || 0).toFixed(1);
                  const [year, month] = (record.report_month || '').split('-');
                  const gregorianYear = Number.parseInt(year, 10);
                  const monthNum = Number.parseInt(month, 10);
                  const thaiYear = gregorianYear + 543;
                  const monthNames = ['มกราคม','กุมภาพันธ์','มีนาคม','เมษายน','พฤษภาคม','มิถุนายน','กรกฎาคม','สิงหาคม','กันยายน','ตุลาคม','พฤศจิกายน','ธันวาคม'];
                  const mLabel = monthNames[monthNum - 1] || '-';
                  const avgColor = avgPercent >= 100 ? 'success' : avgPercent >= 70 ? 'warning' : 'danger';
                %>
                  <tr>
                    <td>
                      <strong><%= mLabel %> <%= thaiYear %></strong>
                      <br><small class="text-muted"><%= record.report_month %></small>
                    </td>
                    <td><span class="badge bg-light text-dark"><%= total %></span></td>
                    <td><span class="badge bg-success"><%= achieved %></span></td>
                    <td><span class="badge bg-warning text-dark"><%= onTrack %></span></td>
                    <td><span class="badge bg-danger"><%= behind %></span></td>
                    <td><span class="badge bg-secondary"><%= noTarget %></span></td>
                    <td>
                      <div class="d-flex align-items-center gap-2">
                        <div class="progress flex-grow-1" style="height: 20px;">
                          <div class="progress-bar bg-<%= avgColor %>" role="progressbar" style="width: <%= Math.min(avgPercent, 100) %>%;">
                            <%= avgPercent %>%
                          </div>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <div class="card-footer bg-light text-muted small">
            <i class="bi bi-info-circle me-1"></i>แสดงข้อมูลล่าสุด 12 เดือน เรียงจากเดือนล่าสุด
          </div>
        <% } %>
      </div>
    <% } %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('monthly-filter-form');
    const monthSelect = document.getElementById('month-select');
    const yearSelect = document.getElementById('year-select');
    const hiddenInput = document.getElementById('month-hidden');
    if (!form || !monthSelect || !yearSelect || !hiddenInput) return;

    const padMonth = (v) => String(Number.parseInt(v, 10) || 1).padStart(2, '0');

    const syncMonthValue = () => {
      const beYear = Number.parseInt(yearSelect.value, 10);
      const adYear = Number.isNaN(beYear) ? new Date().getFullYear() : beYear - 543;
      hiddenInput.value = `${adYear}-${padMonth(monthSelect.value)}`;
    };

    monthSelect.addEventListener('change', syncMonthValue);
    yearSelect.addEventListener('change', syncMonthValue);
    form.addEventListener('submit', syncMonthValue);
  });
</script>

