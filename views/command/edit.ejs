<%- include('../partials/header', { title: 'Edit Command' }) %>
<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4>แก้ไขคำสั่งสำนักงาน</h4>
        </div>
        <div class="card-body">
          <form action="/command/edit/<%= command.command_id %>" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="com_no" class="form-label">เลขที่คำสั่ง</label>
              <input type="text" class="form-control" id="com_no" name="com_no" value="<%= command.com_no %>" required>
            </div>
            <div class="mb-3">
              <label for="com_date" class="form-label">วันที่</label>
              <input type="date" class="form-control" id="com_date" name="com_date" 
                     value="<%= new Date(command.com_date).toISOString().split('T')[0] %>" required>
            </div>
            <div class="mb-3">
              <label for="com_from" class="form-label">จาก</label>
              <input type="text" class="form-control" id="com_from" name="com_from" value="<%= command.com_from %>" required>
            </div>
            <div class="mb-3">
              <label for="com_story" class="form-label">เรื่อง</label>
              <textarea class="form-control" id="com_story" name="com_story" rows="3" required><%= command.com_story %></textarea>
            </div>
            <div class="mb-3">
              <label for="file" class="form-label">ไฟล์</label>
              <input type="file" class="form-control" id="file" name="file" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png">
              <div class="form-text">
                ขนาดไฟล์: PDF, DOC, DOCX, JPG, JPEG, PNG (ขนาดไม่เกิน 10MB)
              
                  <br>ไฟล์ปัจจุบัน: <%= command.com_filename %>
             
              </div>
            </div>
            <div class="d-flex justify-content-between">
              <a href="/command" class="btn btn-secondary">ย้อนกลับ</a>
              <button type="submit" class="btn btn-primary">บันทึก</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>