        <% } %>
        <% if(latestProcessStep){ %>
          <span class="ms-3 text-primary fw-semibold">ขั้นล่าสุด S<%= latestProcessStep %> (<%= formatThaiDate(data['pr_s'+latestProcessStep]) %>)</span>
        <% } else { %>
