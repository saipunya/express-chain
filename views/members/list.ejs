<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Member List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container my-5">
    <h1 class="text-center mb-4">Member List</h1>
    <div class="mb-3 text-end">
      <a href="/member/create" class="btn btn-success">Add New Member</a>
      <!-- back to dashboard -->
      <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Full Name</th>
            <th>Position</th>
            <th>Class</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (members.length > 0) { %>
            <% members.forEach(member => { %>
              <tr>
                <td><%= member.m_id %></td>
                <td><%= member.m_user %></td>
                <td><%= member.m_name %></td>
                <td><%= member.m_position %></td>
                <td><%= member.m_class %></td>
                <td>
                  <form action="/member/status/<%= member.m_id %>" method="POST" class="form-check form-switch mb-2">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      role="switch"
                      id="mStatus-<%= member.m_id %>"
                      name="m_status"
                      value="active"
                      <%= member.m_status === 'active' ? 'checked' : '' %>
                      onChange="updateStatus('<%= member.m_id %>', this.checked)"
                    >
                    <label class="form-check-label visually-hidden" for="mStatus-<%= member.m_id %>">Status</label>
                  </form>
               
                </td>
                <td>
                  <a href="/member/edit/<%= member.m_id %>" class="btn btn-sm btn-primary">Edit</a>
                  <form action="/member/delete/<%= member.m_id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="6" class="text-center">No members found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function updateStatus(memberId, isActive) {
      fetch(`/member/status/${memberId}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ m_status: isActive ? 'active' : 'ban' }),
      })
        .then(response => {
          if (!response.ok) {
            throw new Error('Failed to update status');
          }
          return response.json();
        })
        .then(data => {
          console.log('Status updated:', data);
        })
        .catch(error => {
          console.error('Error updating status:', error);
          alert('Failed to update status. Please try again.');
        });
    }
  </script>
</body>
</html>
