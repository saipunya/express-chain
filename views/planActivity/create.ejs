<h1>Create Plan Activity</h1>
<form action="/planActivity/store" method="post">
  <label>Number: <input name="ac_number" type="number" required></label><br>
  <label>Subject: <input name="ac_subject" required></label><br>
  <label>Status:
    <select name="ac_status" required>
      <option value="0">ยังไม่ดำเนินการ</option>
      <option value="1">อยู่ระหว่างดำเนินการ</option>
      <option value="2">ดำเนินการแล้ว</option>
    </select>
  </label><br>
  <label>Project Code:
    <select name="ac_procode" required>
      <% projects.forEach(p => { %>
        <option value="<%= p.pro_code %>"><%= p.pro_code %></option>
      <% }) %>
    </select>
  </label><br>
  <label>Save By: <input name="ac_saveby" required></label><br>
  <label>Save Date: <input name="ac_savedate" type="date" required></label><br>
  <button type="submit">Save</button>
</form>
